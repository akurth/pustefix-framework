<?xml version="1.0" encoding="ISO-8859-1"?>
<properties xmlns="http://www.pustefix-framework.org/2008/namespace/properties-config">

  <prop name="foo">bar</prop>
  <property name="hey">ho</property>
  
  <choose>
    <when test="$mode='prod'">
      <property name="mode">prod</property>
    </when>
    <when test="$mode='test'">
      <property name="mode">test</property>
    </when>
    <otherwise>
      <property name="mode">other</property>
    </otherwise>
  </choose>
  
  <prop name="fqdn">${fqdn}</prop>

</properties>