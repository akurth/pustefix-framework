<?xml version="1.0"?>
<configuration
  xmlns="http://www.marsching.com/2008/flexiparse/configurationNS"
  xmlns:c="http://www.pustefix-framework.org/2008/namespace/context-xml-config"
>
   
  
  <handler class="org.pustefixframework.config.contextxml.parser.ContextXMLParsingHandler" run-order="both">
    <match>/c:context-xml-config</match>
  </handler>

  <!-- global -->
  
  <handler class="org.pustefixframework.config.contextxml.parser.DefaultStateParsingHandler">
    <match>/c:context-xml-config/c:global-config/c:defaultstate</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.DefaultIHandlerStateParsingHandler">
    <match>/c:context-xml-config/c:global-config/c:defaultihandlerstate</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.SSLParsingHandler">
    <match>/c:context-xml-config/c:global-config//c:force-ssl</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.ContextXMLRegisterGlobalPropertiesParsingHandler" run-order="end">
    <preceding-module>org.pustefixframework.config.generic.PropertiesParsingHandler</preceding-module>
    <match>/c:context-xml-config//c:properties</match>
  </handler>
  
  <!-- context -->
  
  <handler class="org.pustefixframework.config.contextxml.parser.ContextParsingHandler">
    <match>/c:context-xml-config/c:context</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.ContextResourceParsingHandler">
    <match>/c:context-xml-config/c:context/c:resource</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.ContextResourceRegisterPropertiesParsingHandler" run-order="end">
    <preceding-module>org.pustefixframework.config.generic.PropertiesParsingHandler</preceding-module>
    <match>/c:context-xml-config/c:context//c:resource//c:properties</match>
  </handler>
  
  <!-- interceptors -->
  <handler class="org.pustefixframework.config.contextxml.parser.ContextInterceptorParsingHandler">
    <match>/c:context-xml-config/c:interceptors//c:interceptor</match>
  </handler>
  
  <!-- scriptedflows -->
  <handler class="org.pustefixframework.config.contextxml.parser.ScriptedFlowParsingHandler">
    <match>/c:context-xml-config/c:scriptedflow</match>
  </handler>
  
  <!-- authorization -->
  
  <handler class="org.pustefixframework.config.contextxml.parser.RoleProviderParsingHandler">
    <match>/c:context-xml-config/c:roleprovider</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.RoleParsingHandler">
    <match>/c:context-xml-config/c:role</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.ConditionParsingHandler">
    <match>/c:context-xml-config/c:condition</match>
    <match>/c:context-xml-config/c:authconstraint//c:and</match>
    <match>/c:context-xml-config/c:authconstraint//c:or</match>
    <match>/c:context-xml-config/c:authconstraint//c:not</match>
    <match>/c:context-xml-config/c:authconstraint//c:condition</match>
    <match>/c:context-xml-config/c:authconstraint//c:authconstraint</match>
    <match>/c:context-xml-config/c:authconstraint//c:hasrole</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint//c:and</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint//c:or</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint//c:not</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint//c:condition</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint//c:authconstraint</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint//c:hasrole</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint//c:and</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint//c:or</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint//c:not</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint//c:condition</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint//c:authconstraint</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint//c:hasrole</match>
  </handler>
 
  <handler class="org.pustefixframework.config.contextxml.parser.AuthConstraintParsingHandler">
    <match>/c:context-xml-config/c:authconstraint</match>
    <match>/c:context-xml-config/c:pagerequest/c:authconstraint</match>
    <match>/c:context-xml-config/c:pagerequest/*[self::default or self::variant]/c:authconstraint</match>
  </handler>
    
  <!--  pageflows -->
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageFlowParsingHandler">
    <match>/c:context-xml-config/c:pageflow</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageFlowVariantParsingHandler">
    <match>/c:context-xml-config/c:pageflow/c:variant</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageFlowStepParsingHandler">
    <match>/c:context-xml-config/c:pageflow//c:flowstep</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageFlowStepOnContinueParsingHandler">
    <match>/c:context-xml-config/c:pageflow//c:flowstep/c:oncontinue</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageFlowStepConditionParsingHandler">
    <match>/c:context-xml-config/c:pageflow//c:flowstep/c:oncontinue/c:when</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageFlowStepActionParsingHandler">
    <match>/c:context-xml-config/c:pageflow//c:flowstep/c:oncontinue/c:when/c:action</match>
  </handler>
  
    
    
  <handler class="org.pustefixframework.config.contextxml.parser.PageRequestParsingHandler" run-order="both">
    <match>/c:context-xml-config/c:pagerequest[not(child::variant) and not (child::default)]</match>
    <match>/c:context-xml-config/c:pagerequest/c:default</match>
    <match>/c:context-xml-config/c:pagerequest/c:variant</match>
  </handler>

  <handler class="org.pustefixframework.config.contextxml.parser.PageRequestStateParsingHandler">
    <match>/c:context-xml-config/c:pagerequest//c:state</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageRequestInputWrapperParsingHandler">
    <match>/c:context-xml-config/c:pagerequest//c:input/c:wrapper</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageRequestOutputResourceParsingHandler">
    <match>/c:context-xml-config/c:pagerequest//c:output/c:resource</match>
  </handler>
  
  <!-- actions -->
  
  <handler class="org.pustefixframework.config.contextxml.parser.ProcessActionParsingHandler">
    <match>/c:context-xml-config/c:pagerequest//c:process/c:action</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.ProcessActionWrapperParsingHandler">
    <match>/c:context-xml-config/c:pagerequest//c:process/c:action/c:submit/c:wrapper</match>
    <match>/c:context-xml-config/c:pagerequest//c:process/c:action/c:retrieve/c:wrapper</match>
  </handler>
  
  <handler class="org.pustefixframework.config.contextxml.parser.PageRequestRegisterPropertiesParsingHandler" run-order="end">
    <preceding-module>org.pustefixframework.config.generic.PropertiesParsingHandler</preceding-module>
    <match>/c:context-xml-config/c:pagerequest//c:properties</match>
  </handler>
  
  
  <handler class="org.pustefixframework.config.generic.PropertiesParsingHandler">
    <match>/c:context-xml-config//c:properties</match>
    <match>/c:context-xml-config/c:context//c:resource//c:properties</match>
    <match>/c:context-xml-config/c:pagerequest//c:properties</match>
  </handler>
  
  <handler class="org.pustefixframework.config.generic.PropertyParsingHandler">
    <match>/c:context-xml-config//c:properties//c:prop</match>
    <match>/c:context-xml-config/c:context//c:resource//c:properties/c:prop</match>
    <match>/c:context-xml-config/c:pagerequest//c:properties//c:prop</match>
  </handler>
  
  
  <handler id="org.pustefixframework.config.project.customization.WhenParsingHandler" class="org.pustefixframework.config.customization.CustomizationWhenParsingHandler">
    <match>/c:context-xml-config/c:servletinfo/c:choose/c:when</match>
    <!-- <match></match>-->
  </handler>
  
  <handler id="org.pustefixframework.config.project.customization.OtherwiseParsingHandler" class="org.pustefixframework.config.customization.CustomizationOtherwiseParsingHandler">
    <match>/c:context-xml-config/c:servletinfo/c:choose/c:otherwise</match>
    <!--<match></match>-->
  </handler>
  
</configuration>
