<?xml version="1.0" encoding="ISO-8859-1"?>
<webservice-config
  xmlns="http://pustefix.sourceforge.net/wsconfig200401"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pustefix.sourceforge.net/wsconfig200401 ../../core/schema/wsconfig200401.xsd">

  <webservice-global>
    <requestpath>/xml/webservice</requestpath>
    <wsdlsupport enabled="true" repository="/wsdl"/>
    <stubgeneration enabled="true" repository="/wsscript"/>
    <protocol type="ANY"/>
    <encoding style="rpc" use="encoded"/>
    <session type="servlet"/>
    <scope type="application"/>
    <choose>
      <when test="$mode = 'prod'">
        <admin enabled="false"/>
        <monitoring enabled="false"/>
        <logging enabled="false"/>
        <!--
        <faulthandler class="de.schlund.pfixcore.webservice.fault.EmailNotifyingHandler">
          <param name="recipients" value="errors@domain.de"/>
        	 <param name="sender" value="pfxerror@domain.de"/>
        	 <param name="smtphost" value="localhost"/>
        </faulthandler>
        -->
      </when>
      <otherwise>
        <admin enabled="true"/>
        <monitoring enabled="true" scope="session" historysize="10"/>
        <logging enabled="true"/>
        <faulthandler class="de.schlund.pfixcore.webservice.fault.LoggingHandler"/>
      </otherwise>
    </choose>
  </webservice-global>

  <webservice name="Calculator">
    <interface name="de.schlund.pfixcore.example.webservices.Calculator"/>
    <implementation name="de.schlund.pfixcore.example.webservices.CalculatorImpl"/>
    <session type="none"/>
  </webservice>
 
  <webservice name="Chat">
    <interface name="de.schlund.pfixcore.example.webservices.chat.Chat"/>
    <implementation name="de.schlund.pfixcore.example.webservices.chat.ChatImpl"/>
    <session type="servlet"/>
    <context name="pfixcore_project:webservice::servlet:config"/>
  </webservice>

  <webservice name="Counter">
    <interface name="de.schlund.pfixcore.example.webservices.Counter"/>
    <implementation name="de.schlund.pfixcore.example.webservices.CounterImpl"/>
    <session type="servlet"/>
    <scope type="application"/>
    <context name="pfixcore_project:webservice::servlet:config"/>
    <faulthandler class="de.schlund.pfixcore.webservice.fault.LoggingHandler"/>
  </webservice>

  <webservice name="Data">
    <interface name="de.schlund.pfixcore.example.webservices.Data"/>
    <implementation name="de.schlund.pfixcore.example.webservices.DataImpl"/>
    <session type="servlet"/>
    <context name="pfixcore_project:webservice::servlet:config"/>
  </webservice>

  <webservice name="TypeTest">
    <interface name="de.schlund.pfixcore.example.webservices.TypeTest"/>
    <implementation name="de.schlund.pfixcore.example.webservices.TypeTestImpl"/>
    <session type="none"/>
    <context name="pfixcore_project:webservice::servlet:config"/>
  </webservice>

</webservice-config>

