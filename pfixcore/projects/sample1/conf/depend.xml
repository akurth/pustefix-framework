    <!-- <param name="additional_custom_namespaces" value='xmlns:foo="http://foo.bar.baz"'/> -->
    <!-- <param name="exclude_custom_ns_prefixes" value="foo"/> -->
  </global>
  
  <navigation>
    <page name="home"     handler="/xml/config" accesskey="H">
      <page name="order"    handler="/xml/config" accesskey="O"/>
      <page name="phantom" handler="/xml/config" accesskey="O" />
      <page name="overview" handler="/xml/config" accesskey="S"/>
    </page>
    
    <page name="scripting" handler="/xml/config"/>
    <page name="scriptingstate" handler="/xml/config"/>
    <page name="encoding" handler="/xml/config"/>
    <page name="upload" handler="/xml/config"/>
    <page name="test"     handler="/xml/config"/>
    <page name="tokenerror"    handler="/xml/config"/>
    <page name="iwrapperinfo" handler="/xml/config"/>
    <page name="frames" handler="/xml/config"/>
    
