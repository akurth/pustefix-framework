  <standardmaster>
    <!-- <include stylesheet="sample1/xsl/skin.xsl"/> -->
  </standardmaster>
  
  <standardmaster name="var1">
    <!-- <include stylesheet="sample1/xsl/skin-variation1.xsl"/> -->
  </standardmaster>

  <standardmetatags>
    <include stylesheet="sample1/xsl/metatags.xsl"/>
