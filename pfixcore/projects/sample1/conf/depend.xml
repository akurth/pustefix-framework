  <standardpage name="upload" xml="sample1/xml/one_frame.xml"/>
  <standardpage name="test"     xml="sample1/xml/one_frame.xml"/>
  <standardpage name="tokenerror"    xml="sample1/xml/one_frame.xml"/>
  <standardpage name="iwrapperinfo" xml="sample1/xml/one_frame.xml"/>

  <standardpage name="ssltest"  xml="sample1/xml/one_frame_navi.xml"/>
  
  <standardpage name="frames"  xml="sample1/xml/manyframes.xml"/>  
  
  <standardpage name="invalidate" xml="sample1/xml/two_frames.xml"/>
  
  <standardpage name="geninc"   xml="sample1/xml/one_frame.xml">
    <include stylesheet="generatedruntime.xsl"/>
  </standardpage>

  <standardpage name="testchecks" xml="sample1/xml/one_frame.xml"/> 

  <target name="generatedruntime.xsl" type="xml">
    <depxml name="sample1/xsl/generatedruntime.xsl"/>
    <depxsl name="metatags.xsl"/>
  </target>

