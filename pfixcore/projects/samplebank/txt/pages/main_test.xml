<?xml version="1.0" encoding="ISO-8859-1"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <theme name="default">
      <h1>Test</h1>
      <ixsl:if test="pfx:hasRole('ANONYMOUS')">
        <p>User has role <i>ANONYMOUS</i></p>
      </ixsl:if>
      <ixsl:if test="pfx:hasRole('UNRESTRICTED')"> 
        <p>User has role <i>UNRESTRICTED</i></p>
      </ixsl:if>
      <ixsl:if test="pfx:hasRole('ACCOUNT')">
        <p>User has role <i>ACCOUNT</i></p>
      </ixsl:if>
    </theme>
  </part>
  
</include_parts>
