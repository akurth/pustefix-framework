<?xml version="1.0" encoding="ISO-8859-1"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <theme name="default">
      <h1>Customer login:</h1>
      <pfx:forminput type="auth">
        <table>
          <tr>
            <td>Customer ID:</td>
            <td><pfx:xinp type="text" name="login.CustomerID" size="20" default="100000"/></td>
            <td><errormsg name="login.CustomerID"/></td>         
          </tr>
          <tr>
            <td>Password:</td>
            <td><pfx:xinp type="password" name="login.Password" size="20"/></td>
            <td><errormsg name="login.Password"/></td>
          </tr>
          <tr>
            <td colspan="2" align="right"><pfx:xinp type="submit" value="Login"/></td>
          </tr>
        </table>
      </pfx:forminput>
      
      <br/><br/><br/><hr/>
      <ixsl:for-each select="/formresult/test/authtoken">
        <a>
          <ixsl:attribute name="href">/xml/config/accountdetails?__sendingauthdata=1&amp;login.AuthToken=<ixsl:value-of select="@value"/></ixsl:attribute>
          Account login via authentication token</a><br/>
      </ixsl:for-each>
    </theme>
  </part>
  
</include_parts>
