<?xml version="1.0" encoding="ISO-8859-1"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core"><!--Append include parts here...-->
   <!--
  	The content of page two (remember: the navigation is included in the 
  	common.xml)
  -->
  <part name="content">
    <theme name="default">
      <p><pfx:button page="home">Home</pfx:button></p>
      <b>The text received from the form:</b><br/>
      <!--
      	ixsl means that this tag will be interpreted in the second transforming
      	step. It means that there will be a node data in the Domtree containing
      	a value called "demotext". This can also be seen in the logfile 
      	while performing a tail -f on /pfixcore/projects/log/pustefix-servlet.log
      -->
      	<ixsl:value-of select="/formresult/data/demotext/@value"/>
      </theme>
  </part>
</include_parts>
