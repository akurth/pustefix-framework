<?xml version="1.0" encoding="ISO-8859-1"?>
<pfx:document xmlns:pfx="http://www.schlund.de/pustefix/core">
  <pfx:head>
    <title>Pustefix Content Management System</title>
  </pfx:head>
  <pfx:frameset rows="40,*">
    <pfx:frame name="top_navi" scrolling="no">
      <html>
	<head>
          <style type="text/css">
            <pfx:include href="core/txt/styles.xml" part="standard"/>
            <pfx:include href="core/editor2/txt/styles.xml" part="standard"/>
	  </style>
        </head>
	  <body class="navi">
    <!-- TODO Remove for production use -->
    <pfx:editconsole/>
    <div class="topbar">
      <pfx:maincontent path="core/editor2/txt/pages" prefix="main_" part="logoutbutton"/>
    </div>
	</body>
      </html>
    </pfx:frame>
    <pfx:frame name="bottom">
      <html>
	<head>
          <style type="text/css">
            <pfx:include href="core/txt/styles.xml" part="standard"/>
            <pfx:include href="core/editor2/txt/styles.xml" part="standard"/>
          </style>
          <pfx:script>
            function check_frameset() {
              if (top.frames["top_navi"] == null) {
                 var href = self.location.href;
                 var pre  = href.substring(0, href.indexOf("__frame"));
                 var post = href.substring(href.indexOf("bottom") + 6); 
                 top.location.href = pre + "__frame=_top" + post;
              }
            }
          </pfx:script>
        </head>
	<body onload="check_frameset()">
	  <pfx:maincontent path="core/editor2/txt/pages" prefix="main_" part="content"/>
	</body>
      </html>
    </pfx:frame>
  </pfx:frameset>
</pfx:document>

