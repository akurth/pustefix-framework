<?xml version="1.0" encoding="ISO-8859-1"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    
  <product name="default">
<lang name="default">
        <center>
<!--<img src="http://lucene.apache.org/java/docs/images/lucene_green_300.gif"/>-->
          <pfx:forminput>
            <br/>
            <table border="0">
              <!-- <tr>
                <td>
                  <span style="color: #ffffff; font-weight: bold;">Enter your searchword expression below:</span>
                </td>
              </tr> --><!--
              <tr>
                <td>
                  <table border="0" class="editor_box" width="100%"> -->
                    <ixsl:if test="/formresult/formerrors/error">
                      <tr>
                        <td colspan="2">
                          <pfx:errorbox width="100%"/><br/>
                        </td>
                      </tr>
                    </ixsl:if>
            <tr>
              <!--
              <td colspan="2">
                <pfx:switch method="toggle">
                  toggle expertmode
                  <pfx:layer_ref name="expert"/>
                  <pfx:layer_ref name="standard"/>
                </pfx:switch>
              </td> 
              -->
              <!--
              <td align="right">
                <pfx:switch method="toggle">
                  Standard
                  <pfx:layer_ref name="standardView"/>
                  <pfx:layer_ref name="expertView"/>
                </pfx:switch>
              </td>                
              -->
            </tr>
        </table>
<!--        <pfx:layer name="standard" visible="true"> -->
          <table class="editor_box">
                    <tr>
                      <td><b><pfx:label name="lucefix.Contents">Contents:</pfx:label></b></td>
                     <td nowrap="nowrap"><pfx:xinp name="lucefix.Contents" type="text"/></td>
                    </tr>
                    <tr>
                      <td><b><pfx:label name="lucefix.Comments">Comments:</pfx:label></b></td>
                     <td nowrap="nowrap"><pfx:xinp name="lucefix.Comments" type="text"/></td>
                    </tr>
                    <tr>
                      <td><b><pfx:label name="lucefix.Tags">Tags:</pfx:label></b></td>
                     <td nowrap="nowrap"><pfx:xinp name="lucefix.Tags" type="text"/></td>
                    </tr>
                    <tr>
                      <td><b><pfx:label name="lucefix.Attribkeys">Attributekeys:</pfx:label></b></td>
                     <td nowrap="nowrap"><pfx:xinp name="lucefix.Attribkeys" type="text"/></td>
                    </tr>
                    <tr>
                      <td><b><pfx:label name="lucefix.Attribvalues">Attributevalues:</pfx:label></b></td>
                     <td nowrap="nowrap"><pfx:xinp name="lucefix.Attribvalues" type="text"/></td>
                    </tr>
                    <tr>
                      <td align="right" colspan="2"><pfx:xinp type="submit" value="Submit" class="editor_submit">
              <pfx:argument name="lucefix.Doit">true</pfx:argument>
            </pfx:xinp>  </td>
                    </tr>
                  </table>
            <br/>
              <ixsl:choose>
                <ixsl:when test="count(/formresult/lucefix/hit) &gt; 0">
                  <table><tr><td class="editor_main_emph">Matches for &quot;<ixsl:value-of select="/formresult/lucefix/@lastQuery"/>&quot;:</td></tr></table>
                  <table class="editor_box">
            <ixsl:for-each select="/formresult/lucefix/hit">
            <ixsl:variable name="class">
              <ixsl:choose>
                <ixsl:when test="(count(preceding::hit) mod 2) = 0">editor_even_row</ixsl:when>
                <ixsl:otherwise>editor_odd_row</ixsl:otherwise>
              </ixsl:choose>
            </ixsl:variable>
              <tr><td class="{$class}">
                <pfx:button page="includes">
                  <ixsl:value-of select="@path"/>
                  <pfx:argument name="selectinclude.Path"><ixsl:value-of
                      select="@filename"/></pfx:argument>
                  <pfx:argument name="selectinclude.Part"><ixsl:value-of
                      select="@part"/></pfx:argument>
                  <pfx:argument name="selectinclude.Theme"><ixsl:value-of
                      select="@product"/></pfx:argument>
                  <pfx:command name="SELWRP">selectinclude</pfx:command>
                  <pfx:command name="SELWRP">upload</pfx:command>
                </pfx:button></td><td class="{$class}">
                <pfx:image src="/core/editor2/img/score.png" height="10">
                  <ixsl:attribute name="alt"><ixsl:value-of select="@score"/></ixsl:attribute>
                  <ixsl:attribute name="title"><ixsl:value-of select="@score"/></ixsl:attribute>
                  <ixsl:attribute name="width"><ixsl:value-of select="round(number(@score) * 100)"/></ixsl:attribute>
                </pfx:image>
                </td></tr>
            </ixsl:for-each>
                    </table>
            </ixsl:when>
                <ixsl:when test="/formresult/lucefix/@lastQuery != ''">
                  <table class="editor_box">
                  <tr>
                    <td colspan="2">
            <b>No matches for &quot;<ixsl:value-of select="/formresult/lucefix/@lastQuery"/>&quot;</b>
                    </td>
                  </tr>
                    </table>
                </ixsl:when>
              </ixsl:choose>
          </pfx:forminput>
          <pfx:elink href="http://lucene.apache.org/" target="_blank"><pfx:image src="/core/editor2/img/lucene.png" border="0"/></pfx:elink>
        </center>
      </lang>
</product></part>


