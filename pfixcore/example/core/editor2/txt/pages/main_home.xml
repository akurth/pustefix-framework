<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <product name="default">
      <lang name="default">
        <div class="box">
        <pfx:include part="welcome"/>
        </div>
      </lang>
    </product>
  </part>

  <part name="welcome">
    <product name="default">
      <lang name="default">
        <h1>What do you want to do?</h1>
        <p>
          Current project: 
          <em><ixsl:value-of select="/formresult/projects/project[@selected='true']/@comment"/></em>
        </p>
        <ul>
          <li>
            <pfx:button page="pages" normalclass="editor_importantlink" target="_top">
              Pages
            </pfx:button>
            <br/>
            Show pages for this project and browse the depencides 
            for these pages.
            <br/><br/>
          </li>
          <li>
            <pfx:button page="targets" normalclass="editor_importantlink" target="_top">
              Targets
            </pfx:button>
            <br/>
            Show targets generated for this project and browse through
            includeparts and images needed by theses targets.
            <br/><br/>
          </li>
          <li>
            <pfx:button page="images" normalclass="editor_importantlink" target="_top">
              Images
            </pfx:button>
            <br/>
            Show images which are used by this project and upload
            new files or manage theme variants for them.
            <br/><br/>
          </li>
          <li>
            <pfx:button page="includes" normalclass="editor_importantlink" target="_top">
              Includes
            </pfx:button>
            <br/>
            Show images which are used by this project and change
            their content or manage theme variants for them.
            <br/><br/>
          </li>
          <li>
            <pfx:button page="commons" normalclass="editor_importantlink" target="_top">
              DynIncludes
            </pfx:button>
            <br/>
            Show a list of runtime include parts and edit their content or
            manage theme variants for them.
            <br/><br/>
          </li>
          <li>
            <pfx:button page="dynincludes" normalclass="editor_importantlink" target="_top">
              Search
            </pfx:button>
            <br/>
            Search for an include part containing some expression.
            <br/><br/>
          </li>
          <li>
            <pfx:button page="start" normalclass="editor_importantlink" target="_top">
              <em>Select another project</em>
            </pfx:button>
            <br/>
            Go back to the start page and select another project.
            <br/><br/>
          </li>
        </ul>
      </lang>
    </product>
  </part>

</include_parts><!--
Local Variables:
mode: xml
End:
-->
