<?xml version="1.0" encoding="ISO-8859-1"?>
<pfx:document xmlns:pfx="http://www.schlund.de/pustefix/core">
  <pfx:head>
    <title>Pustefix Content Management und Editor</title>
  </pfx:head>
  <pfx:frameset rows="37,*">
    <pfx:frame name="top_navi">
      <html>
	<head>
          <style type="text/css">
            <pfx:include href="core/txt/styles.xml" part="standard"/>
            <pfx:include href="core/editor/txt/styles.xml" part="standard"/>
	  </style>
        </head>
	<body>
        <div class="editor_head">
          <table>
            <tr>
              <td>
                <pfx:include href="core/editor/txt/navigation.xml" part="pfix"/>
              </td>
              <td align="right" width="1%" nowrap="nowrap" style="padding: 3px;">
                <pfx:maincontent path="core/editor/txt/pages" prefix="main_" part="logoutbutton"/>
              </td>
            </tr>
          </table>
        </div>
	</body>
      </html>
    </pfx:frame>
    <pfx:frame name="bottom">
      <html>
	<head>
          <style type="text/css">
            <pfx:include href="core/txt/styles.xml" part="standard"/>
            <pfx:include href="core/editor/txt/styles.xml" part="standard"/>
          </style>
          <pfx:script>
            function check_frameset() {
              if (top.frames["top_navi"] == null) {
                 var href = self.location.href;
                 var pre  = href.substring(0, href.indexOf("__frame"));
                 var post = href.substring(href.indexOf("bottom") + 6); 
                 top.location.href = pre + "__frame=_top" + post;
              }
            }
          </pfx:script>
        </head>
	<body onload="check_frameset()">
	  <pfx:maincontent path="core/editor/txt/pages" prefix="main_" part="content"/>
	</body>
      </html>
    </pfx:frame>
  </pfx:frameset>
</pfx:document>

