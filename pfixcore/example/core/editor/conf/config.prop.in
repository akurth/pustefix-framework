<?xml version="1.0" encoding="ISO-8859-1"?>
<contextxmlserver xmlns="http://pustefix.sourceforge.net/properties200401" xmlns:cus="http://www.schlund.de/pustefix/customize" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://pustefix.sourceforge.net/properties200401 http://pustefix.sourceforge.net/properties200401.xsd" version="1.0">
  
  <servletinfo depend="core/editor/conf/depend.xml" name="pfixcore_project:core_editor_servlet:1">
    <editmode allow="false"/>
  </servletinfo>
  
  <context defaultflow="Editor" authpage="editoruserauth">
    <resource class="de.schlund.pfixcore.editor.resources.EditorSessionStatusImpl">
      <implements class="de.schlund.pfixcore.editor.resources.EditorSessionStatus"/>
    </resource>
    
    <resource class="de.schlund.pfixcore.editor.resources.EditorSearchImpl">
      <implements class="de.schlund.pfixcore.editor.resources.EditorSearch"/>
    </resource>
  </context>
  
  <pageflow name="Editor">
    <flowstep name="prodselect"/>
    <flowstep name="home"/>
    <flowstep name="logout"/>
  </pageflow>
  
  <pageflow name="EditLoginUser">
    <flowstep name="editoruserdata"/>
    <flowstep name="prodselect"/>
  </pageflow>
  
  <pageflow name="UserAdmin">
    <flowstep name="editorusermanager"/>
    <flowstep name="editoruserdata"/>
  </pageflow>
  
  <pagerequest name="editoruserauth">
    <auth>
      <authinterface prefix="auth" class="de.schlund.pfixcore.editor.interfaces.UserAuth"/>
      <auxinterface prefix="extprod" class="de.schlund.pfixcore.editor.interfaces.ProductSelect"/>
      <auxinterface prefix="extpage" class="de.schlund.pfixcore.editor.interfaces.Pages"/>
      <auxinterface prefix="exttarget" class="de.schlund.pfixcore.editor.interfaces.Targets"/>
      <auxinterface prefix="extimg" class="de.schlund.pfixcore.editor.interfaces.Images"/>
      <auxinterface prefix="extinc" class="de.schlund.pfixcore.editor.interfaces.Includes"/>
      <auxinterface prefix="extcom" class="de.schlund.pfixcore.editor.interfaces.Commons"/>
    </auth>
  </pagerequest>
  
  <pagerequest name="documentation">
    <finalizer class="de.schlund.pfixcore.editor.handlers.DocumentationFinalizer"/>
    <input>
      <interface prefix="select" class="de.schlund.pfixcore.editor.interfaces.Documentation"/>
    </input>
  </pagerequest>
  
  <pagerequest name="prodselect">
    <finalizer class="de.schlund.pfixcore.editor.handlers.ProductSelectFinalizer"/>
    <input>
      <interface prefix="edituser" class="de.schlund.pfixcore.editor.interfaces.UserForEdit" continue="true"/>
      <interface prefix="login" class="de.schlund.pfixcore.editor.interfaces.LoginStatus"/>
      <interface prefix="prodsel" class="de.schlund.pfixcore.editor.interfaces.ProductSelect" continue="true"/>
    </input>
  </pagerequest>
  
  <pagerequest name="home">
    <finalizer class="de.schlund.pfixcore.editor.handlers.HomeFinalizer"/>
    <input>
      <interface prefix="update" class="de.schlund.pfixcore.editor.interfaces.UpdateProductPages"/>
    </input>
  </pagerequest>
  
  <pagerequest name="pages">
    <finalizer class="de.schlund.pfixcore.editor.handlers.PagesFinalizer"/>
    <input>
      <interface prefix="psel" class="de.schlund.pfixcore.editor.interfaces.Pages"/>
    </input>
  </pagerequest>
  
  <pagerequest name="targets">
    <finalizer class="de.schlund.pfixcore.editor.handlers.TargetsFinalizer"/>
    <input>
      <interface prefix="tsel" class="de.schlund.pfixcore.editor.interfaces.Targets"/>
    </input>
  </pagerequest>
  
  <pagerequest name="images">
    <finalizer class="de.schlund.pfixcore.editor.handlers.ImagesFinalizer"/>
    <input>
      <interface prefix="imgsel" class="de.schlund.pfixcore.editor.interfaces.Images"/>
      <interface prefix="upload" class="de.schlund.pfixcore.editor.interfaces.ImagesUpload"/>
    </input>
  </pagerequest>
  
  <pagerequest name="includes">
    <finalizer class="de.schlund.pfixcore.editor.handlers.IncludesFinalizer"/>
    <input>
      <interface prefix="create" class="de.schlund.pfixcore.editor.interfaces.IncludesBranch"/>
      <interface prefix="incsel" class="de.schlund.pfixcore.editor.interfaces.Includes"/>
      <interface prefix="uplinc" class="de.schlund.pfixcore.editor.interfaces.IncludesUpload"/>
      <interface prefix="addshow" class="de.schlund.pfixcore.editor.interfaces.ShowIncFile"/>
    </input>
  </pagerequest>
  
  <pagerequest name="search">
    <finalizer class="de.schlund.pfixcore.editor.handlers.SearchFinalizer"/>
    <input>
      <interface prefix="search" class="de.schlund.pfixcore.editor.interfaces.Search"/>
    </input>
  </pagerequest>
  
  <pagerequest name="commons">
    <finalizer class="de.schlund.pfixcore.editor.handlers.CommonsFinalizer"/>
    <input>
      <interface prefix="comsel" class="de.schlund.pfixcore.editor.interfaces.Commons"/>
      <interface prefix="create" class="de.schlund.pfixcore.editor.interfaces.CommonsBranch"/>
      <interface prefix="uplcom" class="de.schlund.pfixcore.editor.interfaces.CommonsUpload"/>
      <interface prefix="addshow" class="de.schlund.pfixcore.editor.interfaces.ShowIncFile"/>
    </input>
  </pagerequest>
  
  <pagerequest name="editoruserdata">
    <finalizer class="de.schlund.pfixcore.editor.handlers.EditorUserDataFinalizer"/>
    <input>
      <interface prefix="cancel" class="de.schlund.pfixcore.editor.interfaces.CancelEditUser" continue="true"/>
      <interface prefix="change" class="de.schlund.pfixcore.editor.interfaces.EditUserData" continue="true"/>
    </input>
  </pagerequest>
  
  <pagerequest name="lockmanager">
    <finalizer class="de.schlund.pfixcore.editor.handlers.LockManagerFinalizer"/>
    <input>
      <interface prefix="delete" class="de.schlund.pfixcore.editor.interfaces.DeleteLock"/>
    </input>
  </pagerequest>
  
  <pagerequest name="editorusermanager">
    <finalizer class="de.schlund.pfixcore.editor.handlers.EditorUserManagerFinalizer"/>
    <input>
      <interface prefix="adduser" class="de.schlund.pfixcore.editor.interfaces.AddUser" continue="true"/>
      <interface prefix="deluser" class="de.schlund.pfixcore.editor.interfaces.DeleteUser"/>
      <interface prefix="seluser" class="de.schlund.pfixcore.editor.interfaces.UserForEdit" continue="true"/>
    </input>
  </pagerequest>
  
  <pagerequest name="sessionmanager">
    <state class="de.schlund.pfixcore.editor.handlers.SessionManagerState"/>
  </pagerequest>
  
  <pagerequest name="logout">
    <input>
      <interface prefix="exit" class="de.schlund.pfixcore.editor.interfaces.Logout"/>
    </input>
  </pagerequest>
  
  <properties>
    
    
    <prop name="xmlserver.prohibitdebug">false</prop>
    <prop name="xmlserver.prohibitinfo">false</prop>
    
    <prop name="pfixcore.editor.backupdir">/home/<cus:uid/>/tmp/editor_backup</prop>
    <prop name="sessioncleaner.timeout">10</prop>
    
  </properties>
</contextxmlserver>
