<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <product name="default">
      <lang name="default">
        <center>
          <pfx:forminput>
            <br/>
            <table border="0" width="600">
              <tr>
                <td>
                  <span style="color: #ffffff; font-weight: bold;">Enter your search expression below:</span>
                </td>
              </tr>
              <tr>
                <td>
                  <table class="editor_box" width="100%" border="0">
                    <ixsl:if test="/formresult/formerrors/error">
                      <tr>
                        <td colspan="4">
                          <pfx:errorbox width="100%"/><br/>
                        </td>
                      </tr>
                    </ixsl:if>
                    <tr>
                      <td><b><pfx:label name="search.Regexp">Search for:</pfx:label></b></td>
                      <td nowrap="nowrap"><b><pfx:label name="search.FullSource">Search mode:</pfx:label></b></td>
                    </tr>
                    <tr valign="top">
                      <td><pfx:xinp class="editor_input" name="search.Regexp" type="text"/></td>
                      <td valign="bottom">
                        <table>
                          <tr>
                            <td>
                              <pfx:xinp name="search.FullSource" type="radio" value="true"/>
                            </td>
                            <td nowrap="nowrap">Full source code</td>
                          </tr>
                          <tr>
                            <td>
                              <pfx:xinp name="search.FullSource" type="radio" value="false"/>
                            </td>
                            <td nowrap="nowrap">Only text nodes</td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                    <tr>
                      <td align="left">
                        <pfx:button mode="force" normalclass="editor_submit" page="search">
                          <pfx:argument name="search.Reset">true</pfx:argument>
                          <pfx:argument name="search.Regexp">dummy</pfx:argument>Reset</pfx:button>
                      </td>
                      <td align="right" colspan="2"><pfx:xinp class="editor_submit" type="submit" value="Submit"/></td>
                    </tr>
                  </table>
                </td>
              </tr>
              <ixsl:choose>
                <ixsl:when test="/formresult/matchingincludes/node()">
                  <tr>
                    <td>
                      <br/>
                      <span style="color: #ffffff; font-weight: bold;">These includes matched your search:</span>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <displaymatchingincludes path="/formresult/matchingincludes" sel="incsel" target="includes" upl="uplinc"/>
                    </td>
                  </tr>
                </ixsl:when>
                <ixsl:when test="/formresult/matchingincludes"> <!-- SCODE_OK, but no matches -->
                  <tr>
                    <td class="editor_warn editor_box">
                      No include matched your search.
                    </td>
                  </tr>
                </ixsl:when>
              </ixsl:choose>
              <ixsl:choose>
                <ixsl:when test="/formresult/matchingcommons/node()">
                  <tr>
                    <td>
                      <br/>
                      <span style="color: #ffffff; font-weight: bold;">These dynamic includes matched your search:</span>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <displaymatchingincludes path="/formresult/matchingcommons" sel="comsel" target="commons" upl="uplcom"/>
                    </td>
                  </tr>
                </ixsl:when>
                <ixsl:when test="/formresult/matchingcommons"> <!-- SCODE_OK, but no matches -->
                  <tr>
                    <td class="editor_warn editor_box">
                      No dynamic include matched your search.
                    </td>
                  </tr>
                </ixsl:when>
              </ixsl:choose>
            </table>
          </pfx:forminput>
        </center>
      </lang>
    </product>
  </part>


</include_parts><!--
Local Variables:
mode: xml
End:
-->