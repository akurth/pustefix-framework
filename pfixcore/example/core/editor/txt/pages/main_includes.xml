<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:pfx="http://www.schlund.de/pustefix/core"
               xmlns:ixsl="http://www.w3.org/1999/XSL/Transform">
  
  <part name="content">
    <product name="default">
      <lang name="default">
        <ixsl:choose>
          <ixsl:when test="/formresult/currentincludeinfo">
            <displaycurrentinclude/><br/>
            <displayincludedetails/>
            <displayaffectedpages path="/formresult/currentincludeinfo"/>
            <displaybranchoptions/>
            <displayincludes path="/formresult/currentincludeinfo"/>
            <displayimages path="/formresult/currentincludeinfo"/>
            <div>
              <table><tr><td class="editor_main_emph">Content of whole part:</td></tr></table>
              <ixsl:choose>
                <ixsl:when test="/formresult/currentincludeinfo/content/node()">
                  <staticdisplay path="/formresult/currentincludeinfo/content/node()"/>
                </ixsl:when>
                <ixsl:otherwise>
                  <div class="editor_box editor_warn">Part is not yet defined!</div>
                </ixsl:otherwise>
              </ixsl:choose>
            </div>
          </ixsl:when>
          <ixsl:otherwise>
            <center>
              <br/>
              <div class="editor_main_emph">
                Please select an include from the list on the left
              </div>
            </center>
          </ixsl:otherwise>
        </ixsl:choose>
      </lang>
    </product>
  </part>
  
  <part name="sidebar">
    <product name="default">
      <lang name="default">
        <ixsl:if test="/formresult/currentsearchincludes">
          <span style="font-size: 10px;">(matching last Search)</span>
          <displayallincludes path="/formresult/currentsearchincludes"/>
        </ixsl:if>
        <displayallincludes/>
      </lang>
    </product>
  </part>

</include_parts>
