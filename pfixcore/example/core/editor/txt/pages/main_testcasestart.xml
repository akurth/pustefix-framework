<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">


  <part name="content">
    <product name="default">
      <lang name="default">
        <br/><br/>
        <pfx:forminput target="_top">
          <table align="center" width="50%">
            <tr>
              <td>
                <table>
                  <tr>
                    <td colspan="2">
                      <span style="color: #ffffff; font-weight: bold;">        
                        You have selected the following testcases:
                      </span>
                    </td>
                  </tr>
                </table>
                <table width="100%" align="center" class="editor_box">
                  <ixsl:for-each select="/formresult/testcases/selected/testcase">
                    <tr>
                      <td colspan="2">
                        <table border="0" class="editor_box" width="100%">
                          <tr><td align="center"><b><ixsl:value-of select="."/></b></td></tr>
                          <tr><td align="center">Number of steps: <ixsl:value-of select="./@number_of_steps"/></td></tr>
                        </table>
                      </td>
                    </tr>
                  </ixsl:for-each>
                  <tr>
                    <td align="left">
                      <pfx:button normalclass="editor_submit" page="testcaseselect">Back</pfx:button>
                    </td>
                    <td align="right">
                      <pfx:xinp class="editor_submit" type="submit" value="Start">
                        <pfx:argument name="tcstart.DoStart">true</pfx:argument>
                      </pfx:xinp>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </pfx:forminput>
      </lang>
      </product>
  </part>


  
</include_parts><!--
Local Variables:
mode: xml
End:
-->
