<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:pfx="http://www.schlund.de/pustefix/core"
               xmlns:ixsl="http://www.w3.org/1999/XSL/Transform">
  
  <part name="content">
    <product name="default">
      <lang name="default">
        <center>
          <ixsl:choose>
            <ixsl:when test="/formresult/formerrors/error[@name = 'imgsel.Path']">
              <br/>
              <table class="core_errorbox_table" width="400">
                <tr>
                  <td class="core_errorlabel_text">
                    Error!
                  </td>
                  <td class="core_errortext">
                    <ixsl:apply-templates select="/formresult/formerrors/error[@name = 'imgsel.Path']/node()"/>
                  </td>
                </tr>
              </table>
            </ixsl:when>
            <ixsl:when test="/formresult/formerrors/error">
              <br/>
              <pfx:errorbox width="400"/>
            </ixsl:when>
          </ixsl:choose>
        </center>
        <ixsl:choose>
          <ixsl:when test="/formresult/currentimageinfo">
            <displaycurrentimage/><br/>
            <displayimagedetails/>
            <displayaffectedpages path="/formresult/currentimageinfo"/>
          </ixsl:when>
          <ixsl:otherwise>
            <center>
              <br/>
              <div class="editor_main_emph">
                Please select an image from the list on the left
              </div>
            </center>
          </ixsl:otherwise>
        </ixsl:choose>
      </lang>
    </product>
  </part>

  <part name="sidebar">
    <product name="default">
      <lang name="default">
        <div class="editor_sidebar_head"><center>I&#160;m&#160;a&#160;g&#160;e&#160;s</center></div><br/>
        <displayallimages/>
      </lang>
    </product>
  </part>

</include_parts>

