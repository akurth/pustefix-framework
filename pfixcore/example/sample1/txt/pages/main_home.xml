<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">

  <part name="adult">
    <product name="default">
      <lang name="default">
        Are you really older than 18 years?
      </lang>
    </product>
  </part>

  <part name="content">
    <product name="default">
      <lang name="default">
        <center>
          <pfx:forminput target="_top">
            <pfx:errorbox width="500"/>
            <br/>
            <div style="text-align: left; padding: 10px;">
              Remote IP: <ixsl:value-of select="$__remote_addr"/><br/>
              Server name: <ixsl:value-of select="$__server_name"/><br/>
              PageFlow: <ixsl:value-of select="$pageflow"/><br/>
            </div>
            <table width="400">
              <tr>
                <td align="left">
                  <b><big>Confirmation:</big></b>
                </td>
              </tr>
            </table>
            <table bgcolor="#bbccff" class="boxed" width="400">
              <tr valign="top">
                <td>
                  <pfx:label name="info.Adult"><pfx:include part="adult"/></pfx:label><br/>
                </td>
                <td>
                  <pfx:xinp name="info.Adult" type="radio" value="true"/><pfx:include part="yes"/><br/>
                  <pfx:xinp default="true" name="info.Adult" type="radio" value="false"/><pfx:include part="no"/><br/>
                  <pfx:xinp name="info.Adult" type="radio" value="foobar"/>foobar<br/>
                </td>
              </tr>
            </table>
            <table width="400">
              <tr>
                <td align="right" nowrap="nowrap">
                  <pfx:xinp type="submit" value="Go!"/>
                </td>
              </tr>
            </table>
            <pfx:button target="_top" page="test">STARTWITHFLOW test</pfx:button>
          </pfx:forminput>
          
          <pfx:include part="buttons"/>
          <br/><br/><br/>
          <pfx:include part="switch"/>
          <br/>
          <br/>
          <pfx:include part="display"/><br/><br/>
          <pfx:include part="sample_layers"/>
        </center>
      </lang>
    </product>
  </part>
  

  <part name="sample_layers">
    <product name="default">
      <lang name="default">
        <pfx:layer class="layer" name="A" pos-left="10" pos-top="10" visible="false">
          <b>This is Layer A</b><br/>
          <pfx:switch>
            <pfx:layer_ref autoclose="true" name="B"/>
            <pfx:layer_check name="B">
              <pfx:on>Switch Layer B OFF</pfx:on>
              <pfx:off>Switch Layer B ON</pfx:off>
            </pfx:layer_check>
          </pfx:switch>
        </pfx:layer>
        
        <pfx:layer class="layer" name="B" pos-right="10" pos-top="10" visible="false">
          <b>This is Layer B</b><br/>
          <pfx:image alt="Good morning" src="/sample1/img/test.gif" title="Good evening"/><br/>
          <pfx:switch>
            <pfx:layer_ref name="C"/>
            Toggle Layer C
          </pfx:switch>
        </pfx:layer>
        
        <pfx:layer class="layer" name="C" pos-bottom="100" pos-left="50" pos-right="50" visible="false">
          <b>This is Layer C</b><br/>
        </pfx:layer>

        
        <pfx:switch>
          <pfx:layer_ref method="on" name="FOO"/>
          <pfx:layer_check name="FOO">
            <pfx:on class="core_button_invisible">Show it...</pfx:on>
            <pfx:off>Show it...</pfx:off>
          </pfx:layer_check>
        </pfx:switch>
        <br/>
        <table border="1" cellpadding="5">
          <tr>
            <td colspan="2">You can hide the</td>
          </tr>
          <tr>
            <td>last</td>
            <pfx:layer element="td" name="FOO" store="false"><b>cell</b></pfx:layer>
          </tr>
        </table>
        <pfx:switch>
          <pfx:layer_ref method="off" name="FOO"/>
          <pfx:layer_check name="FOO">
            <pfx:on>Hide it...</pfx:on>
            <pfx:off class="core_button_invisible">Hide it...</pfx:off>
          </pfx:layer_check>
        </pfx:switch>
        <br/>
        <br/>
        <table>
          <tr>
            <td>
              <pfx:switch>
                <pfx:layer_ref method="on" name="XXX"/>
                <pfx:layer_ref method="off" name="YYY"/>
                <pfx:layer_check name="XXX" type="radio"/>
                <pfx:layer_check name="YYY">
                  <pfx:on>Show BAZ</pfx:on>
                  <pfx:off class="core_button_invisible">Show BAZ</pfx:off>
                </pfx:layer_check>
              </pfx:switch>
            </td>
          </tr>
          <tr>
            <td>
              <pfx:switch>
                <pfx:layer_ref method="off" name="XXX"/>
                <pfx:layer_ref method="on" name="YYY"/>
                <pfx:layer_check name="YYY" type="radio"/>
                <pfx:layer_check name="XXX">
                  <pfx:on>Show FOOBAR</pfx:on>
                  <pfx:off class="core_button_invisible">Show FOOBAR</pfx:off>
                </pfx:layer_check>
              </pfx:switch>
            </td>
          </tr>
        </table>
        <br/>
        <pfx:layer element="div" name="XXX" style="border: 1px solid black; padding: 2px; width: 100px; background-color: black; color: #ff7755;" visible="true">
          <b>BAZ</b>
        </pfx:layer>
        <pfx:layer element="div" name="YYY" style="border: 1px solid black; padding: 2px; width: 100px; background-color: #ff7755; color: black;" visible="false">
          <b>FOOBAR</b>
        </pfx:layer>
      </lang>
    </product>
  </part>

  <part name="yes">
    <product name="default">
      <lang name="default">Yes!
      </lang>
    </product>
  </part>

  <part name="no">
    <product name="default">
      <lang name="default">No!
      </lang>
    </product>
  </part>

  <part name="switch">
    <product name="default">
      <lang name="default">
        <div style="text-align: left; width: 300px; border: 1px solid black;">
          <pfx:switch>
            <pfx:layer_ref name="A"/>
            <pfx:layer_check name="A" type="checkbox"/>Layer A (Closing A also closes B)</pfx:switch>
          <br/>
          <pfx:layer_check disabled="disabled" name="B" type="checkbox"/>Layer B is
          <pfx:layer_check name="B">
            <pfx:on>visible</pfx:on>
            <pfx:off>invisible</pfx:off>
          </pfx:layer_check>
          <br/>
          <pfx:layer_check disabled="disabled" name="YYY" type="radio"/>FOOBAR is shown...
          <br/>
          <pfx:layer_check disabled="disabled" name="XXX" type="radio"/>BAZ is shown...
          <br/>
          <pfx:switch>
            <pfx:layer_ref name="C"/>
            <pfx:layer_check name="C" type="checkbox"/>Layer C</pfx:switch>
        </div>
      </lang>
    </product>
  </part>
  
  <part name="buttons">
    <product name="default">
      <lang name="default">
        <pfx:elink href="http://www.gimp.org" target="_popup">
          <pfx:argument name="foo"><ixsl:value-of select="/formresult/@serial"/></pfx:argument>
          Goto Gimp!</pfx:elink>  
        <pfx:button page="ssltest">SSL TEST</pfx:button>  
        <pfx:button page="install">Download INSTALL.ps</pfx:button>
      </lang>
    </product>
  </part>
  
  <part name="display">
    <product name="default">
      <lang name="default">
        <b>Display type is:
            <ixsl:choose>
              <ixsl:when test="/formresult/iwrappergroups/@groupdisplay = 'true'">
                <pfx:button accesskey="W" mode="force" nodata="true">
                  <pfx:argument name="__groupdisplay">off</pfx:argument>
                  Wizard</pfx:button>
              </ixsl:when>
              <ixsl:otherwise>
                <pfx:button accesskey="W" mode="force" nodata="true">
                  <pfx:argument name="__groupdisplay">on</pfx:argument>
                  Flat</pfx:button>
              </ixsl:otherwise>
            </ixsl:choose>
          </b> (click to toggle)
      </lang>
    </product>
  </part>

</include_parts>
