<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:hlp="http://www.schlund.de/pustefix/onlinehelp" xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">

  <part name="adult">
    <product name="default">
      <lang name="default">
        <pfx:label name="info.Adult">Are you really older than 18 years?</pfx:label>
      </lang>
    </product>
  </part>

  <part name="content">
    <product name="default">
      <lang name="default">
        <center>
          <pfx:forminput target="_top">
            <pfx:errorbox width="500"/>
            <br/>
            <table width="400">
              <tr>
                <td align="left">
                  <b><big>Confirmation:</big></b>
                </td>
              </tr>
            </table>
            <table bgcolor="#bbccff" class="boxed" width="400">
              <tr valign="top">
                <td><pfx:include part="adult"/></td>
                <td><pfx:xinp name="info.Adult" type="radio" value="true"/><pfx:include part="yes"/><br/>
                  <pfx:xinp name="info.Adult" type="radio" value="false"/><pfx:include part="no"/></td>
              </tr>
            </table>
            <table width="400">
              <tr>
                <td align="right" nowrap="nowrap"><pfx:xinp type="submit" value="Go!"/></td>
              </tr>
            </table>
          </pfx:forminput>
          <pfx:include part="switch"/>&#160;&#160;<pfx:include part="buttons"/><br/><br/>
          <pfx:include part="display"/><br/><br/>
          <b>Euro sign <font face="arial">€</font> is written &apos;&amp;#128;&apos;!!</b>
        </center>
        <pfx:include part="sample_layers"/>
      </lang>
    </product>
  </part>
  

  <part name="sample_layers">
    <product name="default">
      <lang name="default">
        <pfx:layer class="layer" name="A" pos-left="10" pos-top="10" visible="false">
          <b>This is Layer A</b><br/>
          <pfx:switch>
            <pfx:layer_ref name="B"/>
            <pfx:layer_check name="B">
              <pfx:on>Switch Layer B OFF</pfx:on>
              <pfx:off>Switch Layer B ON</pfx:off>
            </pfx:layer_check>
          </pfx:switch>
        </pfx:layer>
        
        <pfx:layer class="layer" name="B" pos-right="10" pos-top="10" visible="false">
          <b>This is Layer B</b><br/>
          <pfx:image src="/sample1/img/test.gif"/><br/>
          <pfx:switch>
            <pfx:layer_ref name="C"/>
            Toggle Layer C
          </pfx:switch>
        </pfx:layer>
        
        <pfx:layer class="layer" name="C" pos-bottom="100" pos-left="50" pos-right="50" visible="false">
          <b>This is Layer C</b><br/>
        </pfx:layer>
      </lang>
    </product>
  </part>

  <part name="yes">
    <product name="default">
      <lang name="default">Yes!
      </lang>
    </product>
  </part>

  <part name="no">
    <product name="default">
      <lang name="default">No!
      </lang>
    </product>
  </part>

  <part name="switch">
    <product name="default">
      <lang name="default">
        <pfx:switch><pfx:layer_ref name="A"/>Toggle Layer A</pfx:switch>
        &#160;&#160;
        <pfx:switch><pfx:layer_ref name="B"/>Toggle Layer B</pfx:switch>
      </lang>
    </product>
  </part>
  
  <part name="buttons">
    <product name="default">
      <lang name="default">
        <pfx:elink href="http://www.gimp.org" target="_popup">
          <pfx:argument name="foo"><ixsl:value-of select="/formresult/@serial"/></pfx:argument>
          Goto Gimp!</pfx:elink>&#160;&#160;
        <pfx:button page="ssltest">SSL TEST</pfx:button>&#160;&#160;
        <pfx:button page="install">Download INSTALL.ps</pfx:button>
      </lang>
    </product>
  </part>
  
  <part name="display">
    <product name="default">
      <lang name="default">
        <b>Display type is:
            <ixsl:choose>
              <ixsl:when test="/formresult/iwrappergroups/@groupdisplay = &apos;true&apos;">
                <pfx:button mode="force" nodata="true">
                  <pfx:argument name="__groupdisplay">off</pfx:argument>
                  Wizard</pfx:button>
              </ixsl:when>
              <ixsl:otherwise>
                <pfx:button mode="force" nodata="true">
                  <pfx:argument name="__groupdisplay">on</pfx:argument>
                  Flat</pfx:button>
              </ixsl:otherwise>
            </ixsl:choose>
          </b> (click to toggle)
      </lang>
    </product>
  </part>

</include_parts>

