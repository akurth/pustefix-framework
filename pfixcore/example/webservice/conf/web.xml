<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE projects
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app xmlns:cus="http://www.schlund.de/pustefix/customize">
	
  <filter>
      <filter-name>WebServiceMonitorFilter</filter-name>
      <filter-class>de.schlund.pfixcore.webservice.monitor.MonitorFilter</filter-class>
      <init-param>
         <param-name>historysize</param-name>
         <param-value>10</param-value>
      </init-param>
   </filter>
  
   <filter-mapping>
      <filter-name>WebServiceMonitorFilter</filter-name>
      <url-pattern>/webservice/*</url-pattern>
   </filter-mapping>
	
   <servlet>
      <servlet-name>wsmonitor</servlet-name>
      <servlet-class>de.schlund.pfixcore.webservice.monitor.MonitorServlet</servlet-class>
   </servlet>
                       
  <cus:servlet />
  
  <servlet-mapping>  
      <servlet-name>wsmonitor</servlet-name>
      <url-pattern>/wsmonitor/*</url-pattern>
  </servlet-mapping>
  
  <cus:servlet-mapping />
  <cus:error-page />
  <cus:session-config />
</web-app>
