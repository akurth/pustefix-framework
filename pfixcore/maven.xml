<project default="jar:jar"
  xmlns:define="jelly:define"
  xmlns:ant="jelly:ant"
  xmlns:j="jelly:core"
  xmlns:jsl="jelly:jsl"
  xmlns:log="jelly:log"
  xmlns:maven="jelly:maven"
  xmlns:u="jelly:util"
  xmlns:x="jelly:xml"
  xmlns:doc="doc">

  <goal name="pfix:usage" description="http://pustefix.sf.net/building.html">
    <!-- TODO: poor hack to get the above description printed as maven usage ... -->
  </goal>

  <goal name="pfix:all">
    <ant:echo>ant target: ${target}</ant:echo>
    <!-- TODO: fails because javac does not know ant classes 
       ant:ant dir="${basedir}" antfile="build.xml" target="${target}" inheritAll="false">
      <ant:property name="makemode" value="${makemode}"/>
      <ant:property name="build.compiler" value="modern"/>
    </ant:ant -->
    <ant:exec executable="ant">
      <ant:arg value="realclean"/>
      <ant:arg value="all"/>
      <ant:arg value="-Dmakemode=${makemode}"/>
      <ant:arg value="-Dbuild.compiler=modern"/>
    </ant:exec>
  </goal>

  <preGoal name="site">
    <attainGoal name="pfix:all"/>
    <u:file name="${user.home}/.cvspass" var="cvspass"/>
    <j:if test="${!cvspass.exists()}">
       <ant:echo>creating empty ${cvspass} file</ant:echo>
       <ant:touch file="${cvspass}"/>
    </j:if>
  </preGoal>
  <postGoal name="site">
    <ant:copy todir="${basedir}/target/docs">
      <ant:fileset dir="${basedir}/example/core/schema">
        <ant:include name="*.xsd"/>
        <ant:include name="catalog.xml"/>
      </ant:fileset>
    </ant:copy>
  </postGoal>
  
  <preGoal name="site:sshdeploy">
    <maven:user-check user="${maven.username}"/>
    <ant:echo>wipe maven directory: ${pom.siteDirectory}</ant:echo>
    <ant:exec dir="." executable="${maven.ssh.executable}">
      <arg line="${maven.ssh.args} -l ${maven.username} ${pom.siteAddress} 'rm -rf ${pom.siteDirectory} *'"/>
    </ant:exec>
  </preGoal>
</project>

