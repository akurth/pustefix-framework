<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">

  <part name="adult">
    <product name="default">
      <lang name="default">
        Are you really older than 18 years?
      </lang>
    </product>
  </part>

  <part name="content">
    <product name="default">
      <lang name="default">
        <center>
          <pfx:forminput target="_top">
            <pfx:errorbox width="500"/>
            <br/>
            <table width="400">
              <tr>
                <td align="left">
                  <b><big>Confirmation:</big></b>
                </td>
              </tr>
            </table>
            <table bgcolor="#bbccff" class="boxed" width="400">
              <tr valign="top">
                <td>
                  <pfx:label name="info.Adult"><pfx:include part="adult"/></pfx:label>
                </td>
                <td>
                  <pfx:xinp name="info.Adult" type="radio" value="true"/><pfx:include part="yes"/><br/>
                  <pfx:xinp name="info.Adult" type="radio" value="false" default="true"/><pfx:include part="no"/>
                </td>
              </tr>
            </table>
            <table width="400">
              <tr>
                <td align="right" nowrap="nowrap">
                  <pfx:xinp type="submit" value="Go!"/>
                </td>
              </tr>
            </table>

          </pfx:forminput>
          
          
          <pfx:include part="switch"/>  <pfx:include part="buttons"/><br/><br/>
          <pfx:include part="display"/><br/><br/>
          <pfx:include part="sample_layers"/>
        </center>
      </lang>
    </product>
  </part>
  

  <part name="sample_layers">
    <product name="default">
      <lang name="default">
        <pfx:layer class="layer" name="A" pos-left="10" pos-top="10" visible="false">
          <b>This is Layer A</b><br/>
          <pfx:switch>
            <pfx:layer_ref name="B"/>
            <pfx:layer_check name="B">
              <pfx:on>Switch Layer B OFF</pfx:on>
              <pfx:off>Switch Layer B ON</pfx:off>
            </pfx:layer_check>
          </pfx:switch>
        </pfx:layer>
        
        <pfx:layer class="layer" name="B" pos-right="10" pos-top="10" visible="false">
          <b>This is Layer B</b><br/>
          <pfx:image alt="Good morning" src="/sample1/img/test.gif" title="Good evening"/><br/>
          <pfx:switch>
            <pfx:layer_ref name="C"/>
            Toggle Layer C
          </pfx:switch>
        </pfx:layer>
        
        <pfx:layer class="layer" name="C" pos-bottom="100" pos-left="50" pos-right="50" visible="false">
          <b>This is Layer C</b><br/>
        </pfx:layer>

        
        <pfx:switch>
          <pfx:layer_ref name="FOO" method="on"/>
          <pfx:layer_check name="FOO">
            <pfx:on class="core_button_invisible">Show it...</pfx:on>
            <pfx:off>Show it...</pfx:off>
          </pfx:layer_check>
        </pfx:switch>
        <br/>
        <table cellpadding="5" border="1">
          <tr>
            <td colspan="2">You can hide the</td>
          </tr>
          <tr>
            <td>last</td>
            <pfx:layer store="false" element="td" name="FOO"><b>cell</b></pfx:layer>
          </tr>
        </table>
        <pfx:switch>
          <pfx:layer_ref name="FOO" method="off"/>
          <pfx:layer_check name="FOO">
            <pfx:on>Hide it...</pfx:on>
            <pfx:off class="core_button_invisible">Hide it...</pfx:off>
          </pfx:layer_check>
        </pfx:switch>
        <br/>
        <br/>
        <table>
          <tr>
            <td>
              <pfx:switch>
                <pfx:layer_ref name="XXX" method="on"/>
                <pfx:layer_ref name="YYY" method="off"/>
                <pfx:layer_check name="YYY">
                  <pfx:on>
                    <tt>[ ]</tt> Show "BAZ"
                  </pfx:on>
                  <pfx:off class="core_button_invisible">
                    <tt>[X]</tt> Show "BAZ"
                  </pfx:off>
                </pfx:layer_check>
              </pfx:switch>
            </td>
          </tr>
          <tr>
            <td>
              <pfx:switch>
                <pfx:layer_ref name="XXX" method="off"/>
                <pfx:layer_ref name="YYY" method="on"/>
                <pfx:layer_check name="YYY">
                  <pfx:on class="core_button_invisible">
                    <tt>[X]</tt> Show "FOOBAR"
                  </pfx:on>
                  <pfx:off>
                    <tt>[ ]</tt> Show "FOOBAR"
                  </pfx:off>
                </pfx:layer_check>
              </pfx:switch>
            </td>
          </tr>
        </table>
        <br/>
        <pfx:layer element="span"  name="XXX" visible="true">
          BAZ
        </pfx:layer>
        <pfx:layer element="span" name="YYY" visible="false">
          FOOBAR
        </pfx:layer>
      </lang>
    </product>
  </part>

  <part name="yes">
    <product name="default">
      <lang name="default">Yes!
      </lang>
    </product>
  </part>

  <part name="no">
    <product name="default">
      <lang name="default">No!
      </lang>
    </product>
  </part>

  <part name="switch">
    <product name="default">
      <lang name="default">
        <pfx:switch><pfx:layer_ref name="A"/>Toggle Layer A</pfx:switch>
          
        <pfx:switch><pfx:layer_ref name="B"/>Toggle Layer B</pfx:switch>
      </lang>
    </product>
  </part>
  
  <part name="buttons">
    <product name="default">
      <lang name="default">
        <pfx:elink arget="_popup" href="http://www.gimp.org">
          <pfx:argument name="foo"><ixsl:value-of select="/formresult/@serial"/></pfx:argument>
          Goto Gimp!</pfx:elink>  
        <pfx:button page="ssltest">SSL TEST</pfx:button>  
        <pfx:button page="install">Download INSTALL.ps</pfx:button>
      </lang>
    </product>
  </part>
  
  <part name="display">
    <product name="default">
      <lang name="default">
        <b>Display type is:
            <ixsl:choose>
              <ixsl:when test="/formresult/iwrappergroups/@groupdisplay = &apos;true&apos;">
                <pfx:button mode="force" nodata="true" accesskey="W">
                  <pfx:argument name="__groupdisplay">off</pfx:argument>
                  Wizard</pfx:button>
              </ixsl:when>
              <ixsl:otherwise>
                <pfx:button mode="force" nodata="true" accesskey="W">
                  <pfx:argument name="__groupdisplay">on</pfx:argument>
                  Flat</pfx:button>
              </ixsl:otherwise>
            </ixsl:choose>
          </b> (click to toggle)
      </lang>
    </product>
  </part>

</include_parts><!--
