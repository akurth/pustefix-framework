<?xml version="1.0" encoding="ISO-8859-1" ?>

<project name="webservice" xmlns:cus="http://www.schlund.de/pustefix/customize">
  <!-- The webservice application. Use this as a template for how to define your own projects -->
  
  <active>true</active>
  <comment>webservice Application For Pfixcore</comment>
  <depend><cus:docroot/>webservice/conf/depend.xml</depend>
  <virtualhost><cus:fqdn/></virtualhost>
  <servername>webservice.<cus:fqdn/></servername>
  <serveralias>webservice.<cus:machine/></serveralias>
  <!-- The default path you will be sent to when using the url -->
  <!-- "http://webservice.<servername>/" -->
  <defpath>/xml/config</defpath>
  <passthrough>webservice/img</passthrough>
  <!-- The Apache DocumentRoot for static content -->
  <documentroot><cus:docroot/>webservice/htdocs</documentroot>
  <!-- Here you can enter any additional apache config stuff -->
  <literalapache>
    # Add something here...
  </literalapache>
  <ports>
    <port number="80"/>
  </ports>
  <!-- Use useineditor="true" for every servlet that handles pages belonging directly to the project -->
  <!-- (That means for example not the servlet that starts up the editor, as the pages delivered -->
  <!-- by this servlet belong to the editor project) -->
  <servlet name="config" useineditor="true">
    <active>true</active>
    <class>de.schlund.pfixxml.ContextXMLServer</class>
    <propfile><cus:docroot/>webservice/conf/config.prop</propfile>
  </servlet>
  <servlet name="edit">
    <active>true</active>
    <class>de.schlund.pfixxml.ContextXMLServer</class>
    <propfile><cus:docroot/>core/editor/conf/config.prop</propfile>
  </servlet>
  <servlet name="deref">
    <active>true</active>
    <class>de.schlund.pfixxml.DerefServer</class>
  </servlet>
  <servlet name="webservice">
	<active>true</active>
	<class>de.schlund.pfixcore.webservice.WebServiceServlet</class>
	<propfile><cus:docroot/>webservice/conf/webservice.conf</propfile>
  </servlet>
  <documentation>
    <doc_file><cus:docroot/>webservice/xsl/metatags.xsl.in</doc_file>
  </documentation>  
  <!-- <namespace prefix="foo" uri="http://bar.foobaz"/> -->

</project>

