<?xml version="1.0" encoding="ISO-8859-1"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core"><!--Append include parts here...-->
  <!--
  	The content of page one (remember: the navigation is included in the 
  	common.xml)
  -->
  	<part name="content">
    <theme name="default">
      	A page sending a simple form.     	
      
      <!-- Giving out an error if the textfield is empty.
      	This has been checked out by the regular expression given
      	in the DemoText.iwrp (The IWrapper related to the form)
       -->
      <pfx:errorbox/>
      
      <!-- A tag showing that the form starts here -->
      <pfx:forminput>
      	  <table cellpadding="5">
      	  	<tr>
      	  	  <td>
      	  	  	<!-- A label containing a description for the textfield -->
      	  	  	<pfx:label name="demo.DemoText">The text to send:</pfx:label>
      	  	  	</td>
      	  	  	<td>
      	  	  	<!-- The textfield itself -->
      	  	  	<pfx:xinp name="demo.DemoText" type="text"/>
      	  	  </td>
      	  	</tr>
      	  	<tr>
      	  	  <td>
      	  	  <!-- A submit button -->
      	  	  <pfx:xinp type="submit" value="Abschicken"/>
      	  	  </td>
      	  	</tr>
      	  </table>
       <!-- The closing tag for our form -->
       </pfx:forminput>
    </theme>
</part>
</include_parts>
