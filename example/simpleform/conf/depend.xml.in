<!--
	A file configuring the xml related topics. 
	More Informations here: 
	
	http://pustefix.sourceforge.net/depend.html
	
	Just edit the depend.xml.in and never! the depend.xml (it will
	be generated by pustefix and all your changes will be overwritten)
-->
	<!-- 
		A mandatory tag. Choose a directory relative to 
		the document root (the projects directory is the docroot).
		The files generated by pustefix will be stored in this dir. 
	 -->
	<make cachedir=".cache/simpleform"
      project="simpleform"
      lang="en">

  <!-- A representation of the pages sitetree -->
  <navigation>
    <page name="home" handler="/xml/config"/>
    <page name="output" handler="/xml/config"/>
  </navigation>

  <!-- 
  	A convenience tag that encapsulates the typical target definition 
  	of the master.xsl 
  -->
  <standardmaster>
    <include stylesheet="simpleform/xsl/skin.xsl"/>
  </standardmaster>
  
  <standardmetatags/>
  
  	<!--
  	In this case there is only one standardpage (you can define more). 
  	The frame.xml represents something like a stage related to 
  	the dynamic content.
  -->
  <standardpage name="home" xml="simpleform/xml/frame.xml"/>
  <standardpage name="output" xml="simpleform/xml/frame.xml"/>

</make>
