<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="logoutbutton">
    <product name="default">
      <lang name="default">
        <pfx:button normalclass="editor_submit" page="logout" target="_top">
          <pfx:argument name="exit.Action">full</pfx:argument>Logout</pfx:button>
      </lang>
    </product>
  </part>

  <part name="content">
    <product name="default">
      <lang name="default">
        <br/>
        <center>
          <br/>
          <table width="400">
            <tr>
              <td>
                <span class="editor_main_emph">Select Product to edit below:</span>
              </td>
            </tr>
            <tr>
              <td>
                <productselection/>
                <br/>
              </td>
            </tr>
            <tr>
              <td>
                <table class="editor_box" width="100%">
                  <tr>
                    <td colspan="3" nowrap="nowrap">
                      <b>Hello, <ixsl:value-of select="/formresult/cr_editorsession/user/@name"/>.</b>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" style="padding: 5px;">
                      <pfx:button normalclass="editor_submit" page="sessionmanager">List running sessions</pfx:button>
                    </td>
                    <td align="center" style="padding: 5px;">
                      <pfx:button normalclass="editor_submit" page="lockmanager">List active locks</pfx:button>
                    </td>
                    <td align="right" style="padding: 5px;">
                      <pfx:button mode="force" normalclass="editor_submit" page="prodselect" target="_top">
                        <pfx:command name="SELWRP">edituser</pfx:command>
                        <pfx:argument name="__pageflow">EditLoginUser</pfx:argument>
                        <pfx:argument name="edituser.User"><ixsl:value-of select="/formresult/cr_editorsession/user/@id"/></pfx:argument>
                        Change your data
                      </pfx:button>
                    </td>
                  </tr>
                </table>
                <br/>
              </td>
            </tr>
            <ixsl:if test="/formresult/cr_editorsession/user/permissions/global/@admin = 'true'">
              <tr>
                <td>
                  <table class="editor_box" width="100%">
                    <tr>
                      <td colspan="2">
                        <b>Congratulations. You have administrator
                          rights.</b>
                      </td>
                    </tr>
                    <tr valign="bottom">
                      <td style="padding: 5px;">
                        <pfx:button normalclass="editor_submit" page="editorusermanager">Useradmin</pfx:button>
                      </td>
                      <td align="right" style="padding: 5px;">
                        <ixsl:choose>
                          <ixsl:when test="/formresult/cr_editorsession/@loginallowed = &apos;true&apos;">
                            <pfx:button mode="force" normalclass="editor_submit" page="prodselect" target="_top">
                              <pfx:command name="SELWRP">login</pfx:command>
                              <pfx:argument name="login.LoginAllowed">false</pfx:argument>Prohibit new logins</pfx:button>
                          </ixsl:when>
                          <ixsl:otherwise>
                            <pfx:button mode="force" normalclass="editor_submit" page="prodselect" target="_top">
                              <pfx:command name="SELWRP">login</pfx:command>
                              <pfx:argument name="login.LoginAllowed">true</pfx:argument>Allow new logins</pfx:button>
                          </ixsl:otherwise>
                        </ixsl:choose>
                      </td>
                    </tr>
                    <ixsl:if test="/formresult/cr_editorsession/@loginallowed = &apos;false&apos;">
                      <tr>
                        <td colspan="2">
                          <table class="editor_box" width="100%">
                            <tr>
                              <td align="center">
                                <div class="editor_warn">New logins are currently NOT allowed!</div>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </ixsl:if>
                  </table>
                </td>
              </tr>
            </ixsl:if>
          </table>
        </center>
      </lang>
    </product>
  </part>
  
</include_parts><!--
Local Variables:
mode: xml
End:
-->
