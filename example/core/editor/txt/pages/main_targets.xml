<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:pfx="http://www.schlund.de/pustefix/core"
               xmlns:ixsl="http://www.w3.org/1999/XSL/Transform">
  
  <part name="content">
    <product name="default">
      <lang name="default">
        <center>
          <ixsl:if test="/formresult/formerrors/error">
            <br/>
            <table class="core_errorbox_table" width="200">
              <tr>
                <td class="core_errorlabel_text">
                  Error!
                </td>
                <td class="core_errortext">
                  <ixsl:apply-templates select="/formresult/formerrors/error[@name = 'tsel.Target']/node()"/>
                </td>
              </tr>
            </table>
          </ixsl:if>
        </center>
        <ixsl:choose>
          <ixsl:when test="/formresult/currenttargetinfo">
            <displaycurrenttarget/><br/>
            <displaytargetdetails/>
            <displayaffectedpages path="/formresult/currenttargetinfo"/>
            <displayauxfiles_of_target/>
            <displayincludes path="/formresult/currenttargetinfo"/>
            <displayimages path="/formresult/currenttargetinfo"/>
            <div> 
              <table><tr><td class="editor_main_emph">Content:</td></tr></table>
              <staticdisplay path="/formresult/currenttargetinfo/content/node()"/>
            </div>
          </ixsl:when>
          <ixsl:otherwise>
            <center>
              <br/>
              <div class="editor_main_emph">
                Please select a target from the list on the left
              </div>
            </center>
          </ixsl:otherwise>
        </ixsl:choose>
      </lang>
    </product>
  </part>

  <part name="sidebar">
    <product name="default">
      <lang name="default">
        <displayalltargets/>
      </lang>
    </product>
  </part>

</include_parts>

