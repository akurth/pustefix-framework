<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">


  <part name="content">
    <product name="default">
      <lang name="default">
        <br/><br/>
        <br/>
        <ixsl:choose>
          <ixsl:when test="/formresult/testcases/available/testcase">
            <table border="0" width="50%" align="center">
              <tr>
                <td>
                  <span style="color: #ffffff; font-weight: bold;">The following testcases exist for this product:</span>
                </td>
              </tr>
            </table>
            <pfx:forminput target="_top">	
              <table border="0" width="50%" class="editor_box" align="center" cellpadding="0" cellspacing="0">
                <ixsl:for-each select="/formresult/testcases/available/testcase">
                  <ixsl:variable name="myname" select="./text()"/>
                  <tr>
                    <ixsl:attribute name="class">
                      <ixsl:choose>
                        <ixsl:when test="(count(preceding-sibling::testcase) mod 2) = 0">editor_even_row</ixsl:when>
                        <ixsl:otherwise>editor_odd_row</ixsl:otherwise>
                      </ixsl:choose>
                    </ixsl:attribute>
                    <td>
                      &#160;<ixsl:value-of select="$myname"/>
                    </td>
                    <td align="right">
                      <pfx:xinp type="check" name="tcselect.Select">   
                        <ixsl:attribute name="value"><ixsl:value-of select="$myname"/></ixsl:attribute>
                      </pfx:xinp>
                    </td>
                  </tr>
                </ixsl:for-each>
                <pfx:checkactive prefix="tcselect">
                  <tr>
                    <td colspan="2"><hr/></td>
                  </tr>
                  <tr>
                    <td>
                      <pfx:button normalclass="editor_submit" page="home">Back</pfx:button>
                    </td>
                    <td align="right" nowrap="nowrap">
                      <pfx:xinp type="submit" class="editor_submit" value="Delete selected">
                        <pfx:argument name="tcselect.DoDelete">true</pfx:argument>
                        <pfx:command name="SELWRP">tcselect</pfx:command>
                      </pfx:xinp>&#160;&#160;
                      <pfx:xinp class="editor_submit" type="submit" value="Run selected">
                        <pfx:argument name="tcselect.DoSelect">true</pfx:argument>
                      </pfx:xinp>
                    </td>
                  </tr>
                </pfx:checkactive>
              </table>
            </pfx:forminput>
          </ixsl:when>
          <ixsl:otherwise>
            <table class="editor_box" align="center">
              <tr><td><b>No recorded testcases exist, please record one or more testcases and come back.</b><br/><br/></td></tr>
              <tr><td align="right"><pfx:button normalclass="editor_submit" page="home">Back</pfx:button></td></tr>
            </table>
          </ixsl:otherwise>
        </ixsl:choose>
        <br/>
      </lang>
    </product>
  </part>


  
</include_parts><!--
Local Variables:
mode: xml
End:
-->
