<?xml version="1.0" encoding="ISO-8859-1"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">

  <part name="sidebar">
    <product name="default">
      <lang name="default">
        <ixsl:if test="/formresult/currentsearchcommons">
          <span style="font-size: 10px;">(matching last Search)</span>
          <displayallcommons path="/formresult/currentsearchcommons"/>
        </ixsl:if>
        <displayallcommons/>
      </lang>
    </product>
    
  </part>


  <part name="content">
    <product name="default">
      <lang name="default">
        <ixsl:choose>
          <ixsl:when test="/formresult/currentcommoninfo">
            <displaycurrentcommon/><br/>
            <displaycommondetails/>
            <div>
              <table><tr><td class="editor_main_emph">Content of whole part:</td></tr></table>
              <ixsl:choose>
                <ixsl:when test="/formresult/currentcommoninfo/content/node()">
                  <staticdisplay path="/formresult/currentcommoninfo/content/node()"/>
                </ixsl:when>
                <ixsl:otherwise>
                  <div class="editor_box editor_warn">Part is not yet defined!</div>
                </ixsl:otherwise>
              </ixsl:choose>
            </div>
          </ixsl:when>
          <ixsl:otherwise>
            <center>
              <br/>
              <div class="editor_main_emph">
                Please select a dynamic include from the list on the left
              </div>
            </center>
          </ixsl:otherwise>
        </ixsl:choose>
      </lang>
    </product>
  </part>


</include_parts><!--
Local Variables:
mode: xml
End:
-->
