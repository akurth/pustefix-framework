<?xml version="1.0" encoding="UTF-8"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <theme name="default">
        <h1>Task lists</h1>
        <table cellpadding="10px">
          <tr>
            <th align="left">Name</th>
            <th align="left">Description</th>
            <th align="left">Open tasks</th>
            <th align="left">Total tasks</th> 
          </tr>
          <ixsl:for-each select="/formresult/tasklists/taskList">
          <tr>
            <td align="left"><ixsl:value-of select="@name"/></td>
            <td align="left"><ixsl:value-of select="@description"/></td>
            <td align="right">TODO</td>
            <td align="right">TODO</td>
          </tr>
          </ixsl:for-each>
        </table>
    </theme>
  </part>
  
 
</include_parts>
