<?xml version="1.0" encoding="UTF-8"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <theme name="default">
        <h1>Tasklist</h1>
        <table >
          <tr>
            <td valign="top">
              <div style="font-size:140%; font-weight:bold; padding-bottom: 5px;"><ixsl:value-of select="/formresult/tasks/@name"/></div>
              <div style="font-size:120%; font-style:italic"><ixsl:value-of select="/formresult/tasks/@description"/></div>
            </td>
            <td valign="bottom" style="padding-left:10px">
              <pfx:button page="EditTaskList">
                <pfx:image src="img/edit-24x24.png" border="0" title="Edit tasklist description"/>
              </pfx:button>
            </td>
          </tr>
        </table>
     
      
        <table cellpadding="10px" style="font-size:120%">
          <tr>
            <th align="left">Summary</th>
            <th align="left">Description</th>
            <th align="left">Priority</th>
            <th align="left">State</th>
            <th align="left">Creation date</th>
            <th align="left">Target date</th>
            <th></th>
          </tr>
          <ixsl:for-each select="/formresult/tasks/tasks/task">
          <tr>
            <td align="left"><ixsl:value-of select="@summary"/></td>
            <td align="left"><ixsl:value-of select="@description"/></td>
            <td align="right"><ixsl:value-of select="@priority"/></td>
            <td align="right"><ixsl:value-of select="@state"/></td>
            <td align="right">TODO</td>
            <td align="right">TODO</td>
            <td style="padding-left:20px">
              <pfx:button action="edit">
                <pfx:image src="img/edit-24x24.png"  border="0" title="Edit task description"/>
                <pfx:argument name="edit.id">0</pfx:argument>
              </pfx:button>
              <span style="padding-left:15px"></span>
              <pfx:button action="delete">
                <pfx:image src="img/trash-24x24.png"  border="0" title="Delete task"/>
                <pfx:argument name="delete.id">0</pfx:argument>
              </pfx:button>
            </td>
          </tr>
          </ixsl:for-each>
        </table>
    </theme>
  </part>
  
 
</include_parts>
