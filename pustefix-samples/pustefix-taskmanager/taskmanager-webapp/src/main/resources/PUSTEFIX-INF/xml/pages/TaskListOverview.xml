<?xml version="1.0" encoding="UTF-8"?><include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <theme name="default">
        <h1>Tasklists</h1>
        <table class="list" cellpadding="10px">
          <tr>
            <th align="left">Name</th>
            <th align="left">Description</th>
            <th align="left">Open tasks</th>
            <th align="left">Total tasks</th>
            <th align="right">
              <pfx:button page="CreateTaskList">
                <pfx:image src="img/add-32x32.png" border="0" alt="Create new tasklist" title="Create new tasklist"/>
              </pfx:button>
            </th>
          </tr>
          <ixsl:for-each select="/formresult/tasklists/taskList">
          <tr>
            <ixsl:attribute name="class">
              <ixsl:if test="/formresult/tasklists/@selected = @id">selrow</ixsl:if>
              <ixsl:choose>
                <ixsl:when test="position() mod 2 = 0"> oddrow</ixsl:when>
                <ixsl:otherwise> evenrow</ixsl:otherwise>
              </ixsl:choose>
            </ixsl:attribute>
            <td align="left"><ixsl:value-of select="@name"/></td>
            <td align="left"><ixsl:value-of select="@description"/></td>
            <td align="right">TODO</td>
            <td align="right">TODO</td>
            <td>
              <pfx:button action="select">
                <pfx:image src="img/edit-24x24.png" border="0" alt="Select tasklist" title="Select tasklist" />
                <pfx:argument name="select.id"><ixsl:value-of select="@id"/></pfx:argument>
              </pfx:button>
              <span style="padding-left:15px"></span>
              <pfx:button action="delete">
                <pfx:image src="img/trash-24x24.png" border="0" alt="Delete tasklist" title="Delete tasklist"/>
                <pfx:argument name="delete.id"><ixsl:value-of select="@id"/></pfx:argument>
              </pfx:button>
            </td>
          </tr>
          </ixsl:for-each>
        </table>
    </theme>
  </part>
  
 
</include_parts>
