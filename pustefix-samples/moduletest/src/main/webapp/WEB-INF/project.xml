<?xml version="1.0" encoding="utf-8"?>
<project-config xmlns="http://www.pustefix-framework.org/2008/namespace/project-config">
  
  <project>
    <name>moduletest</name>
    <description>Module test application</description>
  </project>
  
  <editor>
    <choose>
      <when test="$mode='test'">
        <enabled>true</enabled>
      </when>
    </choose>
    <location>http://cms.${fqdn}:9090/pustefix-editor-webui/</location>
    <secret>foobar</secret>
  </editor>

  <xml-generator>
    <config-file>docroot:/WEB-INF/depend.xml</config-file>
    <choose>
      <when test="$mode='prod'">
        <!-- Set this to false if you want to skip the check for changed stylesheets on every request -->
        <check-modtime>false</check-modtime>
      </when>
    </choose>
  </xml-generator>

  <http-server>
    
    <http-port>
      <address>${fqdn}</address>
    </http-port>
    
    <server-name>moduletest.${fqdn}</server-name>
    <server-alias>moduletest.${machine}</server-alias>
    
    <apache>
      <literal>
        <!-- Stuff that is copied to the Apache configuration -->
      </literal>
    </apache>
    
  </http-server>
  
  <application>
    
    <docroot-path>htdocs</docroot-path>
    <default-path>/xml/config</default-path>
    
    <context-xml-service>
      <path>/xml/config</path>
      <config-file>docroot:/WEB-INF/config.conf.xml</config-file>
      <additional-trail-info>de.schlund.pfixxml.perflogging.DefaultAdditionalTrailInfoImpl</additional-trail-info>
      <choose>
        <when test="$mode='prod'">
          <session-cleaner-timeout>20</session-cleaner-timeout>
        </when>
        <otherwise>
          <session-cleaner-timeout>600</session-cleaner-timeout>
        </otherwise>
      </choose>
    </context-xml-service>
    
    <deref-service>
      <path>/xml/deref</path>            <!-- optional: default is /xml/deref -->
      <signkey>987foobarbaz123</signkey> <!-- mandatory -->
      <validtime>3600</validtime>        <!-- optional: default is 3600 (seconds) -->
      <mustsign>false</mustsign>         <!-- optional: default is false -->
    </deref-service>
    
    <static>
      <path>core/img</path>
      <path>core/script</path>
      <path>img</path>
      <path>css</path>
    </static>
    
    <choose>
      <when test="$mode='test'">
        <exception-processing>
          <process type="java.lang.Throwable" 
                   processor="de.schlund.pfixxml.exceptionprocessor.UniversalExceptionProcessor"/>
        </exception-processing>
      </when>
    </choose>
    
  </application>
  
  <properties>
    <!-- Defines SSL ports used for redirect corresponding to the unsecure ports -->
    <prop name="pfixcore.ssl_redirect_port.for.8080">8443</prop>
    <prop name="pfixcore.ssl_redirect_port.for.9080">9443</prop>
  </properties>
  
</project-config>
