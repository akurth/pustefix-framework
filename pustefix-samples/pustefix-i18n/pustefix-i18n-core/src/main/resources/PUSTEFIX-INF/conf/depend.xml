<?xml version="1.0" encoding="utf-8"?>
<make lang="en" project="firstapp">

  <!-- prefix to namespace url mappings to be used in pages xml -->
  <namespaces>
    <namespace-declaration prefix="pfx" url="http://www.schlund.de/pustefix/core"/>
    <namespace-declaration prefix="ixsl" url="http://www.w3.org/1999/XSL/Transform"/>
  </namespaces>

  <navigation>
    <page name="Home">
      <alias lang="de">Start</alias>
      <alias lang="en">home</alias>
      <alias lang="fr">depart</alias>
    </page>
    <page name="Bye">
      <alias lang="de">Tschuess</alias>
      <alias lang="en">goodbye</alias>
      <alias lang="fr">salut</alias>
      <alias lang="en" country="US"></alias>
    </page>
    <page name="Overview">
      <alias lang="de">Uebersicht</alias>
      <alias lang="en">overview</alias>
      <alias lang="fr">apercu</alias>
    </page>
    <page name="LandingPage">
      <alias lang="de">
        <alias variant="living">Wohnen</alias>
        <alias variant="garden">Garten</alias>
        <alias variant="kitchen">Kueche</alias>
      </alias>
      <alias lang="en">
        <alias variant="living">living</alias>
        <alias variant="garden">garden</alias>
        <alias variant="kitchen">kitchen</alias>
      </alias>
      <alias lang="fr">
        <alias variant="living">habiter</alias>
        <alias variant="garden">jardin</alias>
        <alias variant="kitchen">cuisine</alias>
      </alias>
    </page>
  </navigation>

  <standardmaster>
    <include stylesheet="xsl/skin.xsl"/>
  </standardmaster>

  <standardmetatags>
  	<include stylesheet="xsl/metatags.xsl"/>
  </standardmetatags>
  
  <standardpage-variant app="US_market" lang="en_US">US_market-en_US</standardpage-variant>
  <standardpage-variant app="CA_market" lang="en_CA">CA_market-en_CA</standardpage-variant>
  <standardpage-variant app="CA_market" lang="fr_CA">CA_market-fr_CA</standardpage-variant>
  <standardpage-variant app="DE_market" lang="de_DE">DE_market-de_DE</standardpage-variant>

  <standardpage name="Home" xml="xml/frame.xml"/>
  <standardpage name="Bye" xml="xml/frame.xml"/>

  <standardpage name="LandingPage" xml="xml/frame.xml">
    <standardpage-variant>cooking</standardpage-variant>
    <standardpage-variant>garden</standardpage-variant>
    <standardpage-variant>living</standardpage-variant>
  </standardpage>

</make>