<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>org.pustefixframework.samples</groupId>
    <artifactId>pustefix-i18n</artifactId>
    <version>0.18.2-SNAPSHOT</version>
  </parent>

  <groupId>org.pustefixframework.samples</groupId>
  <artifactId>pustefix-i18n-webapp</artifactId>
  <version>0.18.2-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>Pustefix i18n sample webapp</name>

  <properties>
    <pustefix.version>0.18.1</pustefix.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.pustefixframework</groupId>
      <artifactId>pustefix-core</artifactId>
      <version>${pustefix.version}</version>
    </dependency>
    <dependency>
      <groupId>org.pustefixframework.samples</groupId>
      <artifactId>pustefix-i18n-core</artifactId>
      <version>0.18.2-SNAPSHOT</version>
    </dependency>
    <!-- Tenant modules -->
    <dependency>
      <groupId>org.pustefixframework.samples</groupId>
      <artifactId>pustefix-i18n-tenant-ca</artifactId>
      <version>0.18.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.pustefixframework.samples</groupId>
      <artifactId>pustefix-i18n-tenant-us</artifactId>
      <version>0.18.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.pustefixframework.samples</groupId>
      <artifactId>pustefix-i18n-tenant-de</artifactId>
      <version>0.18.2-SNAPSHOT</version>
    </dependency>
  </dependencies>
 
  <build>
    <plugins> 
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>tomcat-maven-plugin</artifactId>
        <version>1.1</version>
        <configuration>
          <path>/</path>
          <uriEncoding>UTF-8</uriEncoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.pustefixframework.maven.plugins</groupId>
        <artifactId>pustefix-webapp-plugin</artifactId>
        <version>0.18.2-SNAPSHOT</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>activatePustefixEditor</id>
      <dependencies>
        <dependency>
          <groupId>org.pustefixframework.editor</groupId>
          <artifactId>pustefix-editor-backend</artifactId>
          <version>${project.version}</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>pustefix.prod</id>
      <activation>
        <property>
          <name>makemode</name>
          <value>prod</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.pustefixframework.maven.plugins</groupId>
            <artifactId>pustefix-generate-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
