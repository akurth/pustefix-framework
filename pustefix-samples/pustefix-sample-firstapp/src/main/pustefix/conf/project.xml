<?xml version="1.0" encoding="utf-8"?>
<project-config xmlns="http://www.pustefix-framework.org/2008/namespace/project-config">

<project>
  <name>firstapp</name>
  <description>My first Pustefix application</description>
  </project>

  <editor>
    <enabled>true</enabled>
    <location>http://cms.${fqdn}/</location>
  </editor>

  <xml-generator>
    <config-file>pfixroot:/WEB-INF/depend.xml</config-file>
  </xml-generator>

  <http-server>

    <http-port>
      <address>${fqdn}</address>
    </http-port>

    <!-- we do not use SSL here
    <https-port>
      <address>${fqdn}</address>
      <ssl-key>pfixroot:/WEB-INF/server.key</ssl-key>
      <ssl-crt>pfixroot:/WEB-INF/server.crt</ssl-crt>
    </https-port>
    -->

    <server-name>firstapp.${fqdn}</server-name>
    <server-alias>firstapp.${machine}</server-alias>

    <apache>
      <literal>
        <!-- Stuff that is copied to the Apache configuration -->
      </literal>
    </apache>

    <tomcat>
      <enable-extra-webapps>false</enable-extra-webapps>
    </tomcat>

  </http-server>

  <application>

    <docroot-path>pfixroot:/htdocs</docroot-path>
    <default-path>/xml/main</default-path>

    <context-xml-service>
      <path>/xml/main</path>
      <config-file>pfixroot:/WEB-INF/app.conf.xml</config-file>
    </context-xml-service>

    <static>
      <path>img</path>
    </static>

  </application>
</project-config>