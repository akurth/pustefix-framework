<?xml version="1.0" encoding="utf-8"?>
<project-config xmlns="http://www.pustefix-framework.org/2008/namespace/project-config">
  
  <project>
    <name>samplebank</name>
    <description>Sample Bank Application</description>
    <secret>foobar</secret>
  </project>
  
  <editor>
    <enabled>true</enabled> <!-- Do we really need this? -->
    <location>http://cms.${fqdn}/</location>
  </editor>
  
  <authadmin/>
  
  <xml-generator>
    <config-file>pfixroot:/conf/depend.xml</config-file>
  </xml-generator>
  
  <http-server>
    
    <http-port>
      <address>${fqdn}</address>
    </http-port>
    
    <server-name>samplebank.${fqdn}</server-name>
    <server-alias>samplebank.${machine}</server-alias>
    
  </http-server>
  
  <application>
    
    <docroot-path>pfixroot:/htdocs</docroot-path>
    <default-path>/xml/main</default-path>
    
    <context-xml-service>
      <path>/xml/main</path>
      <config-file>pfixroot:/conf/config.conf.xml</config-file>
    </context-xml-service>
    
    <static>
      <path>img</path>
    </static>
    
  </application>
  
</project-config>
