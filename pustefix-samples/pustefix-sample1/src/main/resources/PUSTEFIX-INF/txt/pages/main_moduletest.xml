<?xml version="1.0" encoding="UTF-8"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:pfx="http://www.schlund.de/pustefix/core"
>

  <part name="content">
    <theme name="default">
        <h2>Pictures coming from the animal-module</h2>
        
        <table cellpadding="0" cellspacing="2" border="0">
          <tr valign="top">
            <td onclick="__showImage('tiger');">
              <pfx:image src="img/tiger-small.jpg" module="org.pustefixframework.samples.modules.animal-module" style="cursor:pointer"/>
            </td>
            <td onclick="__showImage('elephant');">
              <pfx:image src="img/elephant-small.jpg" module="org.pustefixframework.samples.modules.animal-module" style="cursor:pointer"/>
            </td>
            <td onclick="__showImage('giraffe');">
              <pfx:image src="img/giraffe-small.jpg" module="org.pustefixframework.samples.modules.animal-module" style="cursor:pointer"/>
            </td>
            <td onclick="__showImage('lion');">
              <pfx:image src="img/lion-small.jpg" module="org.pustefixframework.samples.modules.animal-module" style="cursor:pointer"/>
            </td>
          </tr>
        </table>
        
        <table cellpadding="0" cellspacing="2" border="0" style="margin-top:-5px">
          <tr valign="top">
            <td>
              <table cellpadding="0" cellspacing="0">
                <tr>
                  <td onclick="__showImage('rhino');"> 
                    <pfx:image src="img/rhino-small.jpg" module="org.pustefixframework.samples.modules.animal-module" style="cursor:pointer"/>
                  </td>
                </tr>
                <tr>
                  <td onclick="__showImage('zebra');">
                    <pfx:image src="img/zebra-small.jpg" module="org.pustefixframework.samples.modules.animal-module" style="cursor:pointer"/>
                  </td>
                </tr>
              </table>
            </td>
            <td>
              <pfx:image name="bigview" src="img/tiger-large.jpg" module="org.pustefixframework.samples.modules.animal-module" width="700" height="525"/>
            </td>
          </tr>
        </table>
   
      <pfx:script>
        function __showImage(animal) {
          window.document.images['bigview'].src = "<ixsl:value-of select="$__contextpath"/>/bundle://org.pustefixframework.samples.modules.animal-module/PUSTEFIX-INF/img/"+animal+"-large.jpg";
        }
      </pfx:script>
    </theme>
  </part>

</include_parts>
