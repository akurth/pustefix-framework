<?xml version="1.0" encoding="utf-8"?>
<project-config xmlns="http://www.pustefix-framework.org/2008/namespace/project-config">
  
  <project>
    <name>sample1</name>
    <description>Sample1 Application</description>
  </project>
  
  <editor>
    <choose>
      <when test="$mode='test'">
        <enabled>false</enabled>
      </when>
    </choose>
    <location>http://cms.${fqdn}/</location>
    <secret>foobar</secret>
  </editor>
  
  <!-- Performance logging options:
         buffersize: size of buffer for perfevents (default: 1000)
         autostart: start perflogging automatically (default: false)
         offermaxwait: max time a the put-thread will wait when putting perfevent into a full buffer (default: 5)-->
  <perflogging buffersize="200" autostart="true" offermaxwait="5"/>
  
  <!-- JMX remote authentication administration -->
  <!--
  <authadmin/>
  -->
  
  <!-- Testrecording via JMX -->
  <testrecording/>
  
  <xml-generator>
    <config-file>docroot:/WEB-INF/depend.xml</config-file>
    <choose>
      <when test="$mode='prod'">
        <!-- Set this to false if you want to skip the check for changed stylesheets on every request -->
        <check-modtime>false</check-modtime>
      </when>
    </choose>
  </xml-generator>
  
  <http-server>
    
    <http-port>
      <address>${fqdn}</address>
    </http-port>
    
    <https-port>
      <address>${fqdn}</address>
      <ssl-key>docroot:/WEB-INF/server.key</ssl-key>
      <ssl-crt>docroot:/WEB-INF/server.crt</ssl-crt>
    </https-port>
    
    <server-name>sample1.${fqdn}</server-name>
    <server-alias>sample1.${machine}</server-alias>
    
    <apache>
      <literal>
        <!-- Stuff that is copied to the Apache configuration -->
      </literal>
    </apache>
    
    <tomcat>
      <enable-extra-webapps>false</enable-extra-webapps>
    </tomcat>
    
  </http-server>

  <application>
    
    <docroot-path>docroot:/htdocs</docroot-path>
    <default-path>/xml/main</default-path>
    
    <context-xml-service>
      <path>/xml/main</path>
      <config-file>docroot:/WEB-INF/config.conf.xml</config-file>
      <!-- Set this to true if you want to skip the last transformation and only get a
           xml document containing all needed information for an external renderer -->
      <!-- <render-external>true</render-external> -->  
      <additional-trail-info>de.schlund.pfixxml.perflogging.DefaultAdditionalTrailInfoImpl</additional-trail-info>
      <!-- <max-stored-doms>5</max-stored-doms> -->
      <!-- Set the timeout for removing old SPDocuments. (in seconds) -->
      <choose>
        <when test="$mode='prod'">
          <session-cleaner-timeout>20</session-cleaner-timeout>
        </when>
        <otherwise>
          <session-cleaner-timeout>600</session-cleaner-timeout>
        </otherwise>
      </choose>
    </context-xml-service>
    
    <direct-output-service>
      <path>/xml/download</path>
      <config-file>docroot:/WEB-INF/direct.conf.xml</config-file>
    </direct-output-service>
    
    <deref-service>
      <path>/xml/deref</path>            <!-- optional: default is /xml/deref -->
      <signkey>987foobarbaz123</signkey> <!-- mandatory -->
      <validtime>3600</validtime>        <!-- optional: default is 3600 (seconds) -->
      <mustsign>false</mustsign>         <!-- optional: default is false -->
    </deref-service>
    
    <static>
      <path>core/img</path>
      <path>core/script</path>
      <path>img</path>
    </static>
    
    <choose>
      <when test="$mode='test'">
        <exception-processing>
          <process type="java.lang.Throwable" 
                   processor="de.schlund.pfixxml.exceptionprocessor.UniversalExceptionProcessor"/>
          <!-- <process type="mypackage.MyException" forward="true" page="/error.html"/> -->
        </exception-processing>
      </when>
    </choose>
    
  </application>
  
  <properties>
    
    <!-- Defines SSL ports used for redirect corresponding to the unsecure ports -->
    <prop name="pfixcore.ssl_redirect_port.for.8080">8443</prop>
    <prop name="pfixcore.ssl_redirect_port.for.9080">9443</prop>

  </properties>
  
</project-config>
