<?xml version="1.0" encoding="utf-8"?>
<project-config xmlns="http://www.pustefix-framework.org/2008/namespace/project-config">
  
  <project>
    <name>webservice</name>
    <description>Webservice Demo Application</description>
  </project>
  
  <editor>
    <enabled>true</enabled> <!-- Do we really need this? -->
    <location>http://cmscore.${fqdn}/</location>
    <secret>foobar</secret>
  </editor>
  
  <xml-generator>
    <config-file>pfixroot:/webservice/conf/depend.xml</config-file>
  </xml-generator>
  
  <http-server>
    
    <http-port>
      <address>${fqdn}</address>
    </http-port>
    
    <https-port>
      <address>${fqdn}</address>
      <ssl-key>pfixroot:/webservice/conf/server.key</ssl-key>
      <ssl-crt>pfixroot:/webservice/conf/server.crt</ssl-crt>
    </https-port>
    
    <server-name>webservice.${fqdn}</server-name>
    <server-alias>webservice.${fqdn}</server-alias>
    
    <apache>
      <literal>
        <!-- Stuff that is copied to the Apache configuration -->
      </literal>
    </apache>
    
  </http-server>
  
  <application>
    
    <docroot-path>pfixroot:/webservice/htdocs</docroot-path>
    <default-path>/xml/config</default-path>
    
    <context-xml-service>
      <path>/xml/config</path>
      <config-file>pfixroot:/webservice/conf/config.conf.xml</config-file>
    </context-xml-service>
    
    <webservice-service>
      <path>/xml/webservice</path>
      <config-file>pfixroot:/webservice/conf/webservice.conf.xml</config-file>
    </webservice-service>
    
    <static>
      <path>webservice/img</path>
      <path>core/img</path> <!-- FIXME: Get this from central configuration -->
      <path>core/script</path>
    </static>
    
  </application>
  
</project-config>
