<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ws="http://pustefixframework.org/schema/webservices"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
            http://pustefixframework.org/schema/webservices http://pustefixframework.org/schema/webservices/pustefix-webservices.xsd">

  <bean id="calcbean" class="de.schlund.pfixcore.example.webservices.CalculatorImpl" scope="session">
    <aop:scoped-proxy/>
  </bean>
  
  <bean id="counterbean" class="de.schlund.pfixcore.example.webservices.CounterImpl" scope="session">
    <aop:scoped-proxy/>
  </bean>
  
  <bean id="chatbean" class="de.schlund.pfixcore.example.webservices.chat.ChatImpl"/>
  
  <bean id="databean" class="de.schlund.pfixcore.example.webservices.DataImpl"/>
  
  <bean id="typetestbean" class="de.schlund.pfixcore.example.webservices.TypeTestImpl"/>
  
  <bean id="calltestbean" class="de.schlund.pfixcore.example.webservices.CallTestImpl"/>
  
  <bean id="beantestbean" class="de.schlund.pfixcore.example.webservices.BeanTestImpl"/>
  
  <ws:extension id="webservices.extension">
    <ws:extends extension-point="webservices.root"/>
 
    <ws:webservice 
      id="Webservice_Calculator" 
      servicename="Calculator" 
      ref="calcbean" 
      protocol="ANY"/>

    <ws:webservice
      id="Webservice_Counter"
      servicename="Counter"
      ref="counterbean"
      protocol="ANY"/>
      
    <ws:webservice 
      id="Webservice_Chat"
      servicename="Chat"
      ref="chatbean"
      protocol="ANY"
      interface="de.schlund.pfixcore.example.webservices.chat.Chat"/>
   
    <ws:webservice 
      id="Webservice_Data"
      servicename="Data"
      ref="databean"
      protocol="ANY"
      interface="de.schlund.pfixcore.example.webservices.Data"/>
    
    <ws:webservice 
      id="Webservice_TypeTest"
      servicename="TypeTest"
      ref="typetestbean"
      protocol="ANY"
      interface="de.schlund.pfixcore.example.webservices.TypeTest"/>
   
    <ws:webservice 
      id="Webservice_CallTest"
      servicename="CallTest"
      ref="calltestbean"
      protocol="ANY"
      interface="de.schlund.pfixcore.example.webservices.CallTest"/>
    
    <ws:webservice 
      id="Webservice_BeanTest"
      servicename="BeanTest"
      ref="beantestbean"
      protocol="ANY"
      interface="de.schlund.pfixcore.example.webservices.BeanTest"/>

  </ws:extension>
 
</beans>