<?xml version="1.0" encoding="utf-8"?>
<pustefix-application xmlns="http://www.pustefix-framework.org/2009/namespace/application-config">

  <project>
    <name>webservice</name>
    <description>Webservice Demo Application</description>
  </project>
  
  <editor>
    <enabled>true</enabled> <!-- Do we really need this? -->
    <location>http://cmscore.${fqdn}/</location>
    <secret>foobar</secret>
  </editor>
  
  <xml-generator>
    <config-file>bundle:/META-INF/pustefix/depend.xml</config-file>
    <choose>
      <when test="$mode='prod'">
        <!-- Set this to false if you want to skip the check for changed stylesheets on every request -->
        <check-modtime>false</check-modtime>
      </when>
    </choose>
  </xml-generator>
  
  <application>
    
    <docroot-path>bundle:/PUSTEFIX-INF/htdocs</docroot-path>
    <default-path>/xml/main</default-path>
    
    <context-xml-service>
      <path>/xml/main</path>
      <config-file>bundle:/META-INF/pustefix/config.conf.xml</config-file>
      <additional-trail-info>de.schlund.pfixxml.perflogging.DefaultAdditionalTrailInfoImpl</additional-trail-info>
      <choose>
        <when test="$mode='prod'">
          <session-cleaner-timeout>20</session-cleaner-timeout>
        </when>
        <otherwise>
          <session-cleaner-timeout>600</session-cleaner-timeout>
        </otherwise>
      </choose>
    </context-xml-service>
    
    <webservice-service>
      <path>/xml/webservice</path>
      <admin/>
      <monitoring scope="session" historysize="10"/>
      <logging/>
      <faulthandler class="org.pustefixframework.webservices.fault.EmailNotifyingHandler">
        <param name="recipients" value="martin.leidig@1und1.de"/>
        <param name="sender" value="martin.leidig@1und1.de"/>
        <param name="smtphost" value="localhost"/>
      </faulthandler>
    </webservice-service>
    
    <deref-service>
      <path>/xml/deref</path>            <!-- optional: default is /xml/deref -->
      <signkey>987foobarbaz123</signkey> <!-- mandatory -->
      <validtime>3600</validtime>        <!-- optional: default is 3600 (seconds) -->
      <mustsign>false</mustsign>         <!-- optional: default is false -->
    </deref-service>
    
    <static>
      <path>css</path>
      <path>img</path>
      <path>script</path>
    </static>
    
    <choose>
      <when test="$mode='test'">
        <exception-processing>
          <process type="java.lang.Throwable" 
                   processor="de.schlund.pfixxml.exceptionprocessor.UniversalExceptionProcessor"/>
        </exception-processing>
      </when>
    </choose>
    
  </application>
  
  <properties>
    <!-- Defines SSL ports used for redirect corresponding to the unsecure ports -->
    <prop name="pfixcore.ssl_redirect_port.for.8080">8443</prop>
    <prop name="pfixcore.ssl_redirect_port.for.9080">9443</prop>
  </properties>
  
</pustefix-application>
