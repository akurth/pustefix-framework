<?xml version="1.0" encoding="utf-8"?>
<pustefix-application xmlns="http://www.pustefix-framework.org/2009/namespace/application-config"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://www.pustefix-framework.org/2009/namespace/application-config 
                                          http://www.pustefix-framework.org/2009/namespace/application-config.xsd">

  <project>
    <name>Pustefix Sample Basic</name>
    <description>Empty Pustefix Starter Application</description>
  </project>

  <editor>
    <enabled>true</enabled>
    <location>http://cms.${fqdn}/</location>
  </editor>

  <xml-generator>
    <config-file>bundle:/META-INF/pustefix/xml-generator.xml</config-file>
    <choose>
      <when test="$mode='prod'">
        <!-- Set this to false if you want to skip the check for changed stylesheets on every request -->
        <check-modtime>false</check-modtime>
      </when>
    </choose>
  </xml-generator>

  <application>

    <docroot-path>docroot:/htdocs</docroot-path>
    <default-path>/xml/main</default-path>

    <context-xml-service>
      <path>/xml/main</path>
      <config-file>bundle:/META-INF/pustefix/context-xml-service.xml</config-file>
      <additional-trail-info>de.schlund.pfixxml.perflogging.DefaultAdditionalTrailInfoImpl</additional-trail-info>
      <choose>
        <when test="$mode='prod'">
          <session-cleaner-timeout>20</session-cleaner-timeout>
        </when>
        <otherwise>
          <session-cleaner-timeout>600</session-cleaner-timeout>
        </otherwise>
      </choose>
    </context-xml-service>

    <static>
      <path>img</path>
      <path>css</path>
    </static>
    
    <choose>
      <when test="$mode='test'">
        <exception-processing>
          <process type="java.lang.Throwable" 
                   processor="de.schlund.pfixxml.exceptionprocessor.UniversalExceptionProcessor"/>
        </exception-processing>
      </when>
    </choose>

  </application>
  
  <!--
  <properties>
    <prop name="key">value</prop>
  </properties>
  -->
  
</pustefix-application>
