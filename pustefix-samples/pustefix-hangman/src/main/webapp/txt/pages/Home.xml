<?xml version="1.0" encoding="utf-8"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  
  <part name="content">
    <theme name="default">

      <h3><pfx:include part="greeting"/></h3>
 	
      <pfx:forminput>
        Please enter your name:
        <pfx:xinp type="text" name="registration.name" size="20"/>
        <pfx:xinp type="submit" value="Submit"/>
        <show-error field="registration.name"/>
      </pfx:forminput>

    </theme>

  </part>
  
  <part name="greeting">
    <theme name="default">
      Welcome to <pfx:include href="txt/common.xml" part="title"/>!
    </theme>
    <theme name="en">
      Willkommen zu <pfx:include href="txt/common.xml" part="title"/>!
    </theme>
  </part>

 </include_parts>