<?xml version="1.0" encoding="utf-8"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform" xmlns:pfx="http://www.schlund.de/pustefix/core">
  <part name="content">
    <theme name="default">
      <table class="data">
        <tr>
          <th>Player</th>
          <th>Difficulty level</th>
          <th align="right">Tries</th>
          <th align="right">Time (in s)</th>
        </tr>
        <ixsl:for-each select="/formresult/highscore/scores/score">
          <tr>
            <ixsl:attribute name="class">
              <ixsl:choose>
                <ixsl:when test="position() mod 2 = 1">odd</ixsl:when>
                <ixsl:otherwise>even</ixsl:otherwise>
              </ixsl:choose>
            </ixsl:attribute>
            <td><ixsl:value-of select="@player"/></td>
            <td><ixsl:value-of select="@level"/></td>
            <td align="right"><ixsl:value-of select="@tries"/></td>
            <td align="right"><ixsl:value-of select="format-number(@time div 1000, '#')"/></td>
          </tr>
        </ixsl:for-each>
      </table>
    </theme>
  </part>
</include_parts>