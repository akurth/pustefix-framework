<?xml version="1.0" encoding="UTF-8" ?>

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     xmlns:cus="http://www.schlund.de/pustefix/customize">

  <appender name="LOGGER_GENERAL" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-servlet.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} [%t] %-5p %c [%M():%L] %x - %m\n"/>
    </layout>
  </appender>

  <appender name="LOGGER_TRAIL" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-trail.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601}|%m\n"/>
    </layout>
  </appender>
  
  <appender name="LOGGER_WSTRAIL" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-wstrail.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601}|%m\n"/>
    </layout>
  </appender>
  
  <appender name="LOGGER_VISIT" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-visit.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601}|%m\n"/>
    </layout>
  </appender>

  <appender name="LOGGER_EDITOR" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-editor.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %m\n"/>
    </layout>
  </appender>

  <appender name="LOGGER_DEREF" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-deref.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601}|%m\n"/>
    </layout>
  </appender>

  <appender name="LOGGER_WEBSERVICE" class="org.apache.log4j.RollingFileAppender">
    <param name="File"><cus:logroot/>pustefix-webservice.log</param>
    <param name="MaxFileSize" value="10MB"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %m\n"/>
    </layout>
  </appender>

 
  <!-- Categories -->

  <category name="org.apache" additivity="false">
     <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>
  
  <category name="org.springframework" additivity="false">
     <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixcore.workflow.app.RequestDataImpl" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixxml.targets" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixcore.workflow.ContextResourceManagerImpl" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixcore.workflow.Context" additivity="false">
    <priority value="DEBUG"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixxml.SessionCleaner" additivity="false">
    <priority value="INFO"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixxml.PfixServletRequestImpl" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="de.schlund.pfixxml.IncludeDocument" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>
  
  <category name="de.schlund.pfixxml.IncludeDocumentExtension" additivity="false">
    <priority value="DEBUG"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <category name="org.pustefixframework.webservices" additivity="false">
    <cus:choose>
      <cus:when test="$mode = 'prod'">
        <priority value="WARN"/>
      </cus:when>
      <cus:otherwise>
        <priority value="DEBUG"/>
      </cus:otherwise>
    </cus:choose>
    <appender-ref ref="LOGGER_WEBSERVICE"/>
  </category>
  
  <category name="de.schlund.pfixxml.DependencyTracker" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>
  
  <category name="de.schlund.pfixxml.util.CacheValueLRU" additivity="false">
    <priority value="INFO"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>
  
  <category name="de.schlund.pfixcore.generator" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <!-- special categories for additional logfiles -->
  
  <category name="LOGGER_EDITOR" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_EDITOR"/>
  </category>

  <category name="LOGGER_VISIT" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_VISIT"/>
  </category>
  
  <category name="LOGGER_TRAIL" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_TRAIL"/>
  </category>

  <category name="LOGGER_WSTRAIL" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_WSTRAIL"/>
  </category>
  
  <category name="LOGGER_DEREF" additivity="false">
    <priority value="INFO"/>
    <appender-ref ref="LOGGER_DEREF"/>
  </category>

  <category name="org.pustefixframework.live" additivity="false">
    <priority value="WARN"/>
    <appender-ref ref="LOGGER_GENERAL"/>
  </category>

  <!-- default category -->

  <root>
    <cus:choose>
      <cus:when test="$mode = 'prod'">
        <priority value="DEBUG"/>
      </cus:when>
      <cus:otherwise>
        <priority value="DEBUG"/>
      </cus:otherwise>
    </cus:choose>
    <appender-ref ref="LOGGER_GENERAL"/>
  </root>
  
</log4j:configuration>
