<?xml version="1.0"?>
<configuration
  xmlns="http://www.marsching.com/2008/flexiparse/configurationNS"
  xmlns:c="http://www.pustefix-framework.org/2009/namespace/xml-generator-config"
>

  <!-- TODO: add customization support -->

  <handler class="org.pustefixframework.xmlgenerator.config.parser.ConfigurationParsingHandler">
    <match>/c:xml-generator-config</match>
  </handler>

  <handler class="org.pustefixframework.xmlgenerator.config.parser.IncludeParsingHandler">
    <match>/c:xml-generator-config//c:include</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.ParameterParsingHandler">
    <match>/c:xml-generator-config//c:param</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.NamespaceDeclarationParsingHandler">
    <match>/c:xml-generator-config/c:namespaces/c:namespace-declaration</match>
  </handler>

  <handler class="org.pustefixframework.xmlgenerator.config.parser.XMLExtensionPointParsingHandler">
    <match>/c:xml-generator-config/c:namespaces/c:extension-point</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.PageParsingHandler">
    <match>/c:xml-generator-config/c:navigation//c:page</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.XMLExtensionPointParsingHandler">
    <match>/c:xml-generator-config/c:navigation//c:extension-point</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.XMLExtensionPointParsingHandler">
    <match>/c:xml-generator-config/c:extension-point</match>
    <match>/c:xml-generator-config/c:standardmetatags/c:extension-point[@type='xml.include']</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.StandardMasterParsingHandler">
    <match>/c:xml-generator-config/c:standardmaster</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.StandardMetatagsParsingHandler">
    <match>/c:xml-generator-config/c:standardmetatags</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.StandardPageParsingHandler">
    <match>/c:xml-generator-config/c:standardpage</match>
  </handler>
  
  <handler class="org.pustefixframework.xmlgenerator.config.parser.TargetDefParsingHandler">
    <match>/c:xml-generator-config/c:target</match>
  </handler>

</configuration>
