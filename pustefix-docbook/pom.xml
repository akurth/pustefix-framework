<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>pustefixframework</artifactId>
    <groupId>org.pustefixframework</groupId>
    <version>0.14.1-SNAPSHOT</version>
  </parent>

  <name>Pustefix Docbook Documentation</name>

  <groupId>org.pustefixframework</groupId>
  <artifactId>pustefix-docbook</artifactId>
  <version>0.14.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <!-- 
    (March 2009)
    We generate docbook the our old ant scripts because:
    * Doxia supports simplified docbook, but the rendering is poor and we have full docbook
    * There's a Docbook Plugin at http://mojo.codehaus.org/docbook-maven-plugin/introduction.html, 
      but it look out-dated and unmaintained  
    -->
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>pre-site</phase>
            <configuration>
              <tasks>
                <!--  TODO: i cannot use the ant task - the propertyRegex task doesnt work ... -->
                <exec executable="ant" dir="${basedir}/src/docbook"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
