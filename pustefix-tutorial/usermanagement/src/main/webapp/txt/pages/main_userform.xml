<?xml version="1.0" encoding="utf-8"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform"
               xmlns:pfx="http://www.schlund.de/pustefix/core">
  <part name="content">
    <theme name="default">
      <h2>Edit user</h2>
      <pfx:forminput>
        <div>
          <label>Name:</label>
          <pfx:xinp type="text" name="user.name" />
          <pfx:checkfield name="user.name">
            <pfx:error><span class="{$pfx_class}"><pfx:scode/></span></pfx:error>
          </pfx:checkfield>
        </div>
        <div>
          <label>E-Mail:</label>
          <pfx:xinp type="text" name="user.email" />
          <pfx:checkfield name="user.email">
            <pfx:error><span class="{$pfx_class}"><pfx:scode/></span></pfx:error>
          </pfx:checkfield>
        </div>
        <div>
          <label>Birthday:</label>
          <pfx:xinp type="text" name="user.birthday" />
          <pfx:checkfield name="user.birthday">
            <pfx:error><span class="{$pfx_class}"><pfx:scode/></span></pfx:error>
          </pfx:checkfield>
        </div>
        <div>
          <label>Gender:</label> 
          <pfx:xinp type="select" name="user.gender">
            <pfx:option value="m" >male</pfx:option>
            <pfx:option value="f" >female</pfx:option>
          </pfx:xinp>
          <pfx:checkfield name="user.gender">
            <pfx:error><span class="{$pfx_class}"><pfx:scode/></span></pfx:error>
          </pfx:checkfield>
        </div>
        <div>
          <label>Homepage:</label>
          <pfx:xinp type="text" name="user.homepage" />
          <pfx:checkfield name="user.homepage">
            <pfx:error><span class="{$pfx_class}"><pfx:scode/></span></pfx:error>
          </pfx:checkfield>
        </div>
        <div>
          <label>Admin:</label>
          <pfx:xinp type="check" name="user.admin" value="true" default="false" />
        </div>      
        <pfx:xinp type="submit" value="save"/>
      </pfx:forminput>  
    </theme>
  </part>
</include_parts>