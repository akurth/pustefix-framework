<?xml version="1.0" encoding="utf-8"?>
<include_parts xmlns:ixsl="http://www.w3.org/1999/XSL/Transform"
               xmlns:pfx="http://www.schlund.de/pustefix/core">
  <part name="content">
    <theme name="default">
      <h2>User list</h2>
      <div class="table">
        <ixsl:for-each select="/formresult/users/users/user">
          <div>
            <span>Name:</span>
            <span><ixsl:value-of select="./@name"/></span>
          </div>
          <div>
            <span>Email:</span>
            <span><ixsl:value-of select="./@email"/></span>
          </div>
          <div>
            <span>Birthday:</span>
            <span><ixsl:value-of select="./@birthday"/></span>
          </div>
          <div>
            <span>Gender:</span>
            <span><ixsl:value-of select="./@gender"/></span>
          </div>
          <div>
            <span>Homepage:</span>
            <span><ixsl:value-of select="./@homepage"/></span>
          </div>
          <div>
            <span>Admin:</span>
            <span><ixsl:value-of select="./@admin"/></span>
          </div>
          <div>
            <pfx:button jumptopage="userform">
              Edit
              <pfx:command name="SUBWRP">edit</pfx:command>
              <pfx:argument name="edit.id"><ixsl:value-of select="./@id"/></pfx:argument>
              
            </pfx:button>
            <pfx:button>
              Delete
              <pfx:command name="SUBWRP">delete</pfx:command>
              <pfx:argument name="delete.id"><ixsl:value-of select="./@id"/></pfx:argument>
            </pfx:button>
          </div>
        </ixsl:for-each>
      </div>
      <pfx:button page="userform">Add new user</pfx:button>
    </theme>
  </part>
 </include_parts>